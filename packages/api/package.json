{
	"name": "flow-like-api",
	"private": true,
	"version": "0.0.2",
	"type": "module",
	"scripts": {
		"db:push:sync": "bun run db:push && bun run db:sync",
		"db:sync": "docker compose up postgres tools && cd ../.. && cargo fmt --all",
		"db:push": "bunx prisma db push --schema prisma/schema",
		"db:migration:create": "bunx prisma migrate dev --name",
		"db:migration:deploy": "bunx prisma migrate deploy",
		"db:view": "bunx drizzle-kit studio"
	},
	"devDependencies": {
		"@types/node": "^22.10.10",
		"dotenv": "^17.2.2",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.44.5",
		"pg": "^8.16.3",
		"prisma": "^7.2.0",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3"
	},
	"dependencies": {
		"@prisma/client": "^7.2.0"
	}
}
