{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "Profile",
	"type": "object",
	"properties": {
		"id": {
			"type": "string",
			"default": "ipopcvt3f7dx433kz79ppvsz"
		},
		"name": {
			"type": "string"
		},
		"description": {
			"type": ["string", "null"]
		},
		"icon": {
			"type": ["string", "null"],
			"default": null
		},
		"thumbnail": {
			"type": ["string", "null"]
		},
		"interests": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"default": []
		},
		"tags": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"default": []
		},
		"hub": {
			"type": "string",
			"default": ""
		},
		"hubs": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"default": []
		},
		"apps": {
			"type": ["array", "null"],
			"items": {
				"$ref": "#/$defs/ProfileApp"
			},
			"default": null
		},
		"theme": {
			"default": null
		},
		"bits": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"settings": {
			"$ref": "#/$defs/Settings",
			"default": {
				"connection_mode": "simplebezier"
			}
		},
		"updated": {
			"type": "string"
		},
		"created": {
			"type": "string"
		}
	},
	"required": ["name", "bits", "updated", "created"],
	"$defs": {
		"ProfileApp": {
			"type": "object",
			"properties": {
				"app_id": {
					"type": "string"
				},
				"favorite": {
					"type": "boolean"
				},
				"favorite_order": {
					"type": ["integer", "null"],
					"format": "int32"
				},
				"pinned": {
					"type": "boolean"
				},
				"pinned_order": {
					"type": ["integer", "null"],
					"format": "int32"
				}
			},
			"required": ["app_id", "favorite", "pinned"]
		},
		"Settings": {
			"type": "object",
			"properties": {
				"connection_mode": {
					"$ref": "#/$defs/ConnectionMode"
				}
			},
			"required": ["connection_mode"]
		},
		"ConnectionMode": {
			"type": "string",
			"enum": ["default", "straight", "step", "smoothstep", "simplebezier"]
		}
	}
}
