{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "EventPayload",
	"anyOf": [
		{
			"$ref": "#/$defs/ChatEventParameters"
		},
		{
			"$ref": "#/$defs/EmailEventParameters"
		},
		{
			"$ref": "#/$defs/ApiEventParameters"
		},
		{
			"type": "object",
			"additionalProperties": true
		},
		{
			"type": "null"
		}
	],
	"$defs": {
		"ChatEventParameters": {
			"type": "object",
			"properties": {
				"history_elements": {
					"type": ["integer", "null"],
					"format": "uint32",
					"minimum": 0
				},
				"allow_file_upload": {
					"type": ["boolean", "null"]
				},
				"allow_voice_input": {
					"type": ["boolean", "null"]
				},
				"allow_voice_output": {
					"type": ["boolean", "null"]
				},
				"tools": {
					"type": ["array", "null"],
					"items": {
						"type": "string"
					}
				},
				"default_tools": {
					"type": ["array", "null"],
					"items": {
						"type": "string"
					}
				},
				"example_messages": {
					"type": ["array", "null"],
					"items": {
						"type": "string"
					}
				}
			}
		},
		"EmailEventParameters": {
			"type": "object",
			"properties": {
				"mail": {
					"type": ["string", "null"]
				},
				"sender_name": {
					"type": ["string", "null"]
				},
				"smtp_server": {
					"type": ["string", "null"]
				},
				"smtp_port": {
					"type": ["integer", "null"],
					"format": "uint16",
					"minimum": 0,
					"maximum": 65535
				},
				"smtp_username": {
					"type": ["string", "null"]
				},
				"secret_smtp_password": {
					"type": ["string", "null"]
				},
				"imap_server": {
					"type": ["string", "null"]
				},
				"imap_port": {
					"type": ["integer", "null"],
					"format": "uint16",
					"minimum": 0,
					"maximum": 65535
				},
				"imap_username": {
					"type": ["string", "null"]
				},
				"secret_imap_password": {
					"type": ["string", "null"]
				}
			}
		},
		"ApiEventParameters": {
			"type": "object",
			"properties": {
				"path_suffix": {
					"type": ["string", "null"]
				},
				"method": {
					"type": ["string", "null"]
				},
				"public_endpoint": {
					"type": ["boolean", "null"]
				}
			}
		}
	}
}
