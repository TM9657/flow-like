{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "UpsertCommentCommand",
	"type": "object",
	"required": ["comment"],
	"properties": {
		"comment": {
			"$ref": "#/definitions/Comment"
		},
		"old_comment": {
			"anyOf": [
				{
					"$ref": "#/definitions/Comment"
				},
				{
					"type": "null"
				}
			]
		}
	},
	"definitions": {
		"Comment": {
			"type": "object",
			"required": ["comment_type", "content", "coordinates", "id", "timestamp"],
			"properties": {
				"id": {
					"type": "string"
				},
				"author": {
					"type": ["string", "null"]
				},
				"content": {
					"type": "string"
				},
				"comment_type": {
					"$ref": "#/definitions/CommentType"
				},
				"timestamp": {
					"$ref": "#/definitions/SystemTime"
				},
				"coordinates": {
					"type": "array",
					"items": [
						{
							"type": "number",
							"format": "float"
						},
						{
							"type": "number",
							"format": "float"
						},
						{
							"type": "number",
							"format": "float"
						}
					],
					"maxItems": 3,
					"minItems": 3
				}
			}
		},
		"CommentType": {
			"type": "string",
			"enum": ["Text", "Image", "Video"]
		},
		"SystemTime": {
			"type": "object",
			"required": ["nanos_since_epoch", "secs_since_epoch"],
			"properties": {
				"secs_since_epoch": {
					"type": "integer",
					"format": "uint64",
					"minimum": 0.0
				},
				"nanos_since_epoch": {
					"type": "integer",
					"format": "uint32",
					"minimum": 0.0
				}
			}
		}
	}
}
