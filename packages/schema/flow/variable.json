{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Variable",
  "type": "object",
  "required": [
    "data_type",
    "editable",
    "exposed",
    "id",
    "name",
    "secret",
    "value_type"
  ],
  "properties": {
    "category": {
      "type": [
        "string",
        "null"
      ]
    },
    "data_type": {
      "$ref": "#/definitions/VariableType"
    },
    "default_value": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "integer",
        "format": "uint8",
        "minimum": 0.0
      }
    },
    "description": {
      "type": [
        "string",
        "null"
      ]
    },
    "editable": {
      "type": "boolean"
    },
    "exposed": {
      "type": "boolean"
    },
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "secret": {
      "type": "boolean"
    },
    "value_type": {
      "$ref": "#/definitions/ValueType"
    }
  },
  "definitions": {
    "ValueType": {
      "type": "string",
      "enum": [
        "Array",
        "Normal",
        "HashMap",
        "HashSet"
      ]
    },
    "VariableType": {
      "type": "string",
      "enum": [
        "Execution",
        "String",
        "Integer",
        "Float",
        "Boolean",
        "Date",
        "PathBuf",
        "Generic",
        "Struct",
        "Byte"
      ]
    }
  }
}
