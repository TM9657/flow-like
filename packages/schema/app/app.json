{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "App",
	"type": "object",
	"required": [
		"authors",
		"bits",
		"boards",
		"created_at",
		"id",
		"meta",
		"updated_at"
	],
	"properties": {
		"id": {
			"type": "string"
		},
		"meta": {
			"type": "object",
			"additionalProperties": {
				"$ref": "#/definitions/BitMeta"
			}
		},
		"authors": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"bits": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"boards": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"updated_at": {
			"$ref": "#/definitions/SystemTime"
		},
		"created_at": {
			"$ref": "#/definitions/SystemTime"
		},
		"frontend": {
			"anyOf": [
				{
					"$ref": "#/definitions/FrontendConfiguration"
				},
				{
					"type": "null"
				}
			]
		}
	},
	"definitions": {
		"BitMeta": {
			"type": "object",
			"required": [
				"description",
				"long_description",
				"name",
				"tags",
				"use_case"
			],
			"properties": {
				"name": {
					"type": "string"
				},
				"description": {
					"type": "string"
				},
				"long_description": {
					"type": "string"
				},
				"tags": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"use_case": {
					"type": "string"
				}
			}
		},
		"SystemTime": {
			"type": "object",
			"required": ["nanos_since_epoch", "secs_since_epoch"],
			"properties": {
				"secs_since_epoch": {
					"type": "integer",
					"format": "uint64",
					"minimum": 0.0
				},
				"nanos_since_epoch": {
					"type": "integer",
					"format": "uint32",
					"minimum": 0.0
				}
			}
		},
		"FrontendConfiguration": {
			"type": "object",
			"properties": {
				"landing_page": {
					"type": ["string", "null"]
				}
			}
		}
	}
}
