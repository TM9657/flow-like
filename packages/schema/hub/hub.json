{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Hub",
	"type": "object",
	"required": [
		"contact",
		"description",
		"domain",
		"environment",
		"features",
		"hubs",
		"legal_notice",
		"web",
		"name",
		"privacy_policy",
		"terms_of_service",
		"tiers"
	],
	"properties": {
		"name": {
			"type": "string"
		},
		"description": {
			"type": "string"
		},
		"thumbnail": {
			"type": ["string", "null"]
		},
		"icon": {
			"type": ["string", "null"]
		},
		"authentication": {
			"anyOf": [
				{
					"$ref": "#/definitions/Authentication"
				},
				{
					"type": "null"
				}
			]
		},
		"features": {
			"$ref": "#/definitions/Features"
		},
		"hubs": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"provider": {
			"type": ["string", "null"]
		},
		"domain": {
			"type": "string"
		},
		"region": {
			"type": ["string", "null"]
		},
		"terms_of_service": {
			"type": "string"
		},
		"cdn": {
			"type": ["string", "null"]
		},
		"app": {
			"type": ["string", "null"]
		},
		"legal_notice": {
			"type": "string"
		},
		"web": {
			"type": ["string", "null"]
		},
		"privacy_policy": {
			"type": "string"
		},
		"contact": {
			"$ref": "#/definitions/Contact"
		},
		"max_users_prototype": {
			"type": ["integer", "null"],
			"format": "int32"
		},
		"default_user_plan": {
			"type": ["string", "null"]
		},
		"environment": {
			"$ref": "#/definitions/Environment"
		},
		"tiers": {
			"type": "object",
			"additionalProperties": {
				"$ref": "#/definitions/UserTier"
			}
		},
		"lookup": {
			"default": {
				"additional_information": true,
				"avatar": true,
				"created_at": true,
				"description": true,
				"email": false,
				"name": true,
				"preferred_username": true,
				"username": false
			},
			"allOf": [
				{
					"$ref": "#/definitions/Lookup"
				}
			]
		},
		"oauth_providers": {
			"type": "object",
			"additionalProperties": {
				"$ref": "#/definitions/OAuthProviderConfig"
			},
			"default": {}
		}
	},
	"definitions": {
		"Authentication": {
			"type": "object",
			"required": ["variant"],
			"properties": {
				"variant": {
					"type": "string"
				},
				"openid": {
					"anyOf": [
						{
							"$ref": "#/definitions/OpenIdConfig"
						},
						{
							"type": "null"
						}
					]
				},
				"oauth2": {
					"anyOf": [
						{
							"$ref": "#/definitions/OAuth2Config"
						},
						{
							"type": "null"
						}
					]
				}
			}
		},
		"OpenIdConfig": {
			"type": "object",
			"required": ["jwks_url"],
			"properties": {
				"authority": {
					"type": ["string", "null"]
				},
				"client_id": {
					"type": ["string", "null"]
				},
				"redirect_uri": {
					"type": ["string", "null"]
				},
				"post_logout_redirect_uri": {
					"type": ["string", "null"]
				},
				"response_type": {
					"type": ["string", "null"]
				},
				"scope": {
					"type": ["string", "null"]
				},
				"discovery_url": {
					"type": ["string", "null"]
				},
				"user_info_url": {
					"type": ["string", "null"]
				},
				"jwks_url": {
					"type": "string"
				},
				"proxy": {
					"anyOf": [
						{
							"$ref": "#/definitions/OpenIdProxy"
						},
						{
							"type": "null"
						}
					]
				},
				"cognito": {
					"anyOf": [
						{
							"$ref": "#/definitions/CognitoConfig"
						},
						{
							"type": "null"
						}
					]
				}
			}
		},
		"OpenIdProxy": {
			"type": "object",
			"required": ["enabled"],
			"properties": {
				"enabled": {
					"type": "boolean"
				},
				"authorize": {
					"type": ["string", "null"]
				},
				"token": {
					"type": ["string", "null"]
				},
				"userinfo": {
					"type": ["string", "null"]
				},
				"revoke": {
					"type": ["string", "null"]
				}
			}
		},
		"CognitoConfig": {
			"type": "object",
			"required": ["user_pool_id"],
			"properties": {
				"user_pool_id": {
					"type": "string"
				}
			}
		},
		"OAuth2Config": {
			"type": "object",
			"required": ["authorization_endpoint", "client_id", "token_endpoint"],
			"properties": {
				"authorization_endpoint": {
					"type": "string"
				},
				"token_endpoint": {
					"type": "string"
				},
				"client_id": {
					"type": "string"
				}
			}
		},
		"Features": {
			"type": "object",
			"required": [
				"admin_interface",
				"ai_act",
				"flow_hosting",
				"governance",
				"model_hosting",
				"premium",
				"unauthorized_read"
			],
			"properties": {
				"model_hosting": {
					"type": "boolean"
				},
				"flow_hosting": {
					"type": "boolean"
				},
				"governance": {
					"type": "boolean"
				},
				"ai_act": {
					"type": "boolean"
				},
				"unauthorized_read": {
					"type": "boolean"
				},
				"admin_interface": {
					"type": "boolean"
				},
				"premium": {
					"type": "boolean"
				}
			}
		},
		"Contact": {
			"type": "object",
			"required": ["email", "name", "url"],
			"properties": {
				"name": {
					"type": "string"
				},
				"email": {
					"type": "string"
				},
				"url": {
					"type": "string"
				}
			}
		},
		"Environment": {
			"type": "string",
			"enum": ["Development", "Production", "Staging"]
		},
		"UserTier": {
			"type": "object",
			"required": [
				"execution_tier",
				"llm_tiers",
				"max_llm_cost",
				"max_llm_calls",
				"max_non_visible_projects",
				"max_remote_executions",
				"max_total_size",
				"product_id"
			],
			"properties": {
				"max_non_visible_projects": {
					"type": "integer",
					"format": "int32"
				},
				"max_remote_executions": {
					"type": "integer",
					"format": "int32"
				},
				"execution_tier": {
					"type": "string"
				},
				"max_total_size": {
					"type": "integer",
					"format": "int64"
				},
				"max_llm_cost": {
					"type": "integer",
					"format": "int32"
				},
				"max_llm_calls": {
					"type": "integer",
					"format": "int32"
				},
				"llm_tiers": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"product_id": {
					"type": ["string", "null"]
				}
			}
		},
		"Lookup": {
			"type": "object",
			"required": [
				"additional_information",
				"avatar",
				"created_at",
				"description",
				"email",
				"name",
				"preferred_username",
				"username"
			],
			"properties": {
				"email": {
					"type": "boolean"
				},
				"name": {
					"type": "boolean"
				},
				"username": {
					"type": "boolean"
				},
				"preferred_username": {
					"type": "boolean"
				},
				"avatar": {
					"type": "boolean"
				},
				"additional_information": {
					"type": "boolean"
				},
				"description": {
					"type": "boolean"
				},
				"created_at": {
					"type": "boolean"
				}
			}
		},
		"OAuthProviderConfig": {
			"type": "object",
			"required": ["name", "auth_url", "token_url"],
			"properties": {
				"name": {
					"description": "Display name shown to users",
					"type": "string"
				},
				"client_id": {
					"description": "The resolved client ID (populated at runtime)",
					"type": ["string", "null"]
				},
				"auth_url": {
					"description": "OAuth authorization endpoint URL",
					"type": "string"
				},
				"token_url": {
					"description": "OAuth token endpoint URL",
					"type": "string"
				},
				"scopes": {
					"description": "Base OAuth scopes",
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": []
				},
				"pkce_required": {
					"description": "Whether PKCE is required",
					"type": "boolean",
					"default": false
				},
				"requires_secret_proxy": {
					"description": "Whether this provider requires the secret proxy for token exchange",
					"type": "boolean",
					"default": false
				},
				"revoke_url": {
					"description": "URL for token revocation",
					"type": ["string", "null"]
				},
				"userinfo_url": {
					"description": "URL for user info endpoint",
					"type": ["string", "null"]
				},
				"device_auth_url": {
					"description": "Device authorization URL for device flow",
					"type": ["string", "null"]
				},
				"use_device_flow": {
					"description": "Whether to use device flow",
					"type": "boolean",
					"default": false
				},
				"use_implicit_flow": {
					"description": "Whether to use implicit flow (response_type=token) instead of authorization code flow",
					"type": "boolean",
					"default": false
				},
				"audience": {
					"description": "Audience claim for token validation",
					"type": ["string", "null"]
				}
			}
		}
	}
}
