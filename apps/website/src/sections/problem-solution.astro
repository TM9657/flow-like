---
import { LuEye, LuShield, LuZap } from "react-icons/lu";

const features = [
  {
    icon: LuEye,
    title: "Full Visibility",
    description: "Every step captures inputs, changes, and outputs.",
  },
  {
    icon: LuShield,
    title: "Explainable Results",
    description: "Easier reviews, faster debugging, fewer surprises.",
  },
  {
    icon: LuZap,
    title: "Any Scale",
    description: "Solo to production — same visibility throughout.",
  },
];
---

<!-- Sharp tilted white section with bottom edge going back to dark -->
<section class="relative pb-32 pt-16 -mb-16">
  <!-- White background with sharp tilted bottom edge -->
  <div
    class="absolute inset-0 bg-[#fafafa]"
    style="clip-path: polygon(0 0, 100% 0, 100% calc(100% - 60px), 0 100%);"
  ></div>

  <!-- Horizontal accent line - offset left -->
  <div
    aria-hidden="true"
    class="pointer-events-none absolute left-[8%] top-1/2 w-24 h-px bg-neutral-300"
  ></div>

  <!-- Content -->
  <div class="relative z-10 mx-auto max-w-6xl px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-16 lg:gap-24 items-start">
      <!-- Left: Copy -->
      <div class="lg:sticky lg:top-32">
        <p class="text-[11px] font-medium tracking-[0.3em] uppercase text-neutral-400 mb-4">
          Why this matters
        </p>
        <h2 class="text-3xl sm:text-4xl font-semibold tracking-tight text-neutral-900 leading-[1.2] mb-6">
          The hard part isn't making something run —
          <span class="text-primary"> it's knowing what happened.</span>
        </h2>
        <p class="text-neutral-500 leading-relaxed">
          Most tools show a green checkmark and move on. You're left guessing
          where the data came from and why the result looks the way it does.
        </p>
      </div>

      <!-- Right: Minimal feature list -->
      <div class="space-y-0 divide-y divide-neutral-200">
        {features.map((feature) => (
          <div class="py-8 first:pt-0 last:pb-0">
            <div class="flex items-start gap-4">
              <feature.icon className="w-5 h-5 text-neutral-400 mt-0.5 shrink-0" />
              <div>
                <h3 class="text-base font-medium text-neutral-900 mb-1">
                  {feature.title}
                </h3>
                <p class="text-sm text-neutral-500">
                  {feature.description}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
