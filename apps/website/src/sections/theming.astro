							>
								<figure
									class="snap-start shrink-0 w-48 sm:w-56"
								>
									<Image
										src={designCatppuccin}
										alt="Catppuccin"
										class="rounded-xl border border-border/60 hover:shadow-lg transition"
										loading="lazy"
									/>
									<figcaption
										class="mt-2 text-xs text-muted-foreground"
									>
										Catppuccin
									</figcaption>
