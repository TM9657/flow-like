---
import { Image } from "astro:assets";
import { LuCircleGauge, LuCodeXml, LuLock, LuPaintbrush } from "react-icons/lu";

import designBubblegumLight from "../images/index/theme-bubblegum-light.png";
import designBubblegum from "../images/index/theme-bubblegum.png";
import designCatppuccin from "../images/index/theme-catppuccin.png";
import designCosmicNight from "../images/index/theme-cosmic-night.png";
import designDoom from "../images/index/theme-doom.png";
import designNeoBrutalism from "../images/index/theme-neo-brutalism.png";
import designSoftPop from "../images/index/theme-soft-pop.png";
---

<section
	id="whitelabel"
	data-c1="hsl(262 83% 66% / .10)"
	data-c2="hsl(292 84% 65% / .10)"
	class="relative mx-auto max-w-7xl px-4 py-24 sm:py-28 lg:px-8 mb-6 overflow-hidden lg:overflow-visible"
>
	<!-- decorative bg -->
	<div aria-hidden="true" class="pointer-events-none absolute inset-0">
		<div
			class="absolute inset-0 [mask-image:radial-gradient(60%_60%_at_50%_40%,black,transparent)]"
		>
			<div
				class="absolute inset-0 bg-[linear-gradient(to_right,theme(colors.border/.18)_1px,transparent_1px),linear-gradient(to_bottom,theme(colors.border/.18)_1px,transparent_1px)] bg-[size:36px_36px]"
			>
			</div>
		</div>
		<!-- Enhanced glow orbs - BIGGER -->
		<div
			class="glow-orb absolute -top-32 -left-32 h-[28rem] w-[28rem]"
			style="background: radial-gradient(60% 60% at 50% 50%, hsl(262 83% 66% / 0.6) 0%, transparent 60%);"
		></div>
		<div
			class="glow-orb absolute -bottom-32 -right-32 h-[26rem] w-[26rem]"
			style="background: radial-gradient(60% 60% at 50% 50%, hsl(292 84% 65% / 0.55) 0%, transparent 60%); animation-delay: -4s;"
		></div>
		<div
			class="glow-orb absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 h-[32rem] w-[32rem]"
			style="background: radial-gradient(60% 60% at 50% 50%, hsl(280 80% 60% / 0.35) 0%, transparent 60%); animation-delay: -2s;"
		></div>
	</div>

	<div class="relative z-10">
		<!-- ensure nothing exceeds viewport on mobile -->
		<div
			class="relative rounded-3xl p-5 sm:p-8 lg:p-14 border border-border/40 bg-card/50 backdrop-blur-md overflow-hidden lg:overflow-visible max-w-[min(100%,100vw-2rem)] sm:max-w-none mx-auto"
		>
			<div
				aria-hidden="true"
				class="pointer-events-none absolute -top-1/2 left-1/2 h-[120%] w-[140%] -translate-x-1/2 rotate-12 bg-gradient-to-r from-transparent via-white/6 to-transparent"
			>
			</div>

			<!-- RESPONSIVE GRID -->
			<div class="grid gap-10 sm:gap-12 lg:grid-cols-2">
				<!-- LEFT -->
				<div class="space-y-8 min-w-0">
					<div>
						<div
							class="inline-flex items-center gap-2 rounded-full border border-violet-500/30 bg-violet-500/10 backdrop-blur-2xl px-4 py-1.5 text-sm font-medium text-violet-600 dark:text-violet-400 mb-5 shadow-[0_0_40px_-8px_rgba(139,92,246,0.4)]"
						>
							<span
								class="w-2 h-2 bg-violet-500 rounded-full animate-pulse shadow-[0_0_12px_rgba(139,92,246,0.8)]"
							></span>
							Under your brand
						</div>

						<h2
							class="text-3xl sm:text-4xl lg:text-5xl font-bold leading-tight break-words"
						>
							<span
								class="bg-gradient-to-r from-foreground via-violet-500 to-purple-500 bg-clip-text text-transparent drop-shadow-sm"
								>Add the editor or just the engine</span
							>
						</h2>

						<p
							class="mt-4 sm:mt-5 text-base sm:text-lg text-muted-foreground leading-relaxed"
						>
							Drop the visual editor into your app, run the engine
							behind the scenes, or combine both. Your logo, your
							colors — with the same visibility and audit trail.
						</p>
					</div>

					<!-- MODE SWITCHER -->
					<div id="wl-mode" class="space-y-4" data-mode="embed">
						<div
							class="flex flex-col sm:flex-row gap-2 rounded-2xl border border-border/60 bg-muted/40 p-1.5 shadow-sm"
						>
							<label class="group relative flex-1">
								<input
									type="radio"
									name="wl-mode"
									value="embed"
									class="peer sr-only"
									checked
								/>
								<span
									class="flex items-center justify-center h-full w-full text-center cursor-pointer select-none rounded-xl px-4 py-3 text-sm font-medium text-muted-foreground transition peer-checked:text-foreground peer-checked:bg-background peer-checked:shadow-md group-hover:text-foreground"
								>
									Drop-in editor
								</span>
							</label>
							<label class="group relative flex-1">
								<input
									type="radio"
									name="wl-mode"
									value="headless"
									class="peer sr-only"
								/>
								<span
									class="flex items-center justify-center h-full w-full text-center cursor-pointer select-none rounded-xl px-4 py-3 text-sm font-medium text-muted-foreground transition peer-checked:text-foreground peer-checked:bg-background peer-checked:shadow-md group-hover:text-foreground"
								>
									Run headless
								</span>
							</label>
							<label class="group relative flex-1">
								<input
									type="radio"
									name="wl-mode"
									value="hybrid"
									class="peer sr-only"
								/>
								<span
									class="flex items-center justify-center h-full w-full text-center cursor-pointer select-none rounded-xl px-4 py-3 text-sm font-medium text-muted-foreground transition peer-checked:text-foreground peer-checked:bg-background peer-checked:shadow-md group-hover:text-foreground"
								>
									Hybrid mode
