---
import { getCollection } from "astro:content";
import { LuArrowRight } from "react-icons/lu";
import type { Lang, TranslationKey } from "../i18n";
import { translations, defaultLang } from "../i18n";

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = (key: TranslationKey): string => {
  const langTranslations = translations[lang] as Record<string, string>;
  const enTranslations = translations.en as Record<string, string>;
  return langTranslations?.[key] ?? enTranslations[key] ?? key;
};

const posts = (
  await getCollection("blog", ({ data }) =>
    import.meta.env.PROD ? !data.draft : true,
  )
)
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);

const thumbFor = (p: any) => {
  const img = p.data.thumb ?? p.data.thumbnail ?? p.data.image ?? p.data.cover ?? p.data.hero ?? p.data.ogImage;
  return typeof img === "string" ? img : (img?.src ?? "/og.png");
};

const descFor = (p: any) => p.data.excerpt ?? p.data.description ?? p.data.subtitle ?? "";

const dateFor = (p: any) =>
  p.data?.date
    ? new Date(p.data.date).toLocaleDateString(lang === "de" ? "de-DE" : lang === "es" ? "es-ES" : lang === "fr" ? "fr-FR" : "en-US", { month: "short", day: "numeric", year: "numeric" })
    : "";
---

<section class="relative py-24 bg-zinc-950">
  <!-- Subtle grid overlay -->
  <div
    aria-hidden="true"
    class="pointer-events-none absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-size-[64px_64px]"
  ></div>

  <div class="relative mx-auto max-w-6xl px-6 lg:px-8">
    <!-- Minimal header -->
    <div class="flex items-end justify-between mb-12">
      <div>
        <p class="text-[11px] font-medium tracking-[0.3em] uppercase text-zinc-500 mb-3">
          {t("reading.tagline")}
        </p>
        <h2 class="text-2xl sm:text-3xl font-semibold tracking-tight text-zinc-100">
          {t("reading.headline")}
        </h2>
      </div>
      <a
        href="/blog/"
        class="hidden sm:inline-flex items-center gap-2 text-sm font-medium text-zinc-400 hover:text-zinc-100 transition-colors group"
      >
        {t("reading.viewall")}
        <LuArrowRight className="w-4 h-4 group-hover:translate-x-0.5 transition-transform" />
      </a>
    </div>

    <!-- Post grid with thumbnails -->
    <div class="grid gap-6 md:grid-cols-3">
      {posts.map((post) => (
        <a
          href={`/blog/${post.slug.split("-").slice(3).join("-")}/`}
          class="group block"
        >
          <!-- Thumbnail -->
          <div class="relative aspect-video mb-4 overflow-hidden rounded-lg bg-zinc-900">
            <img
              src={thumbFor(post)}
              alt={`Article thumbnail for ${post.data.title}`}
              class="absolute inset-0 w-full h-full object-cover opacity-80 group-hover:opacity-100 group-hover:scale-[1.02] transition-all duration-300"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-linear-to-t from-zinc-950/60 to-transparent"></div>
          </div>

          <!-- Content -->
          <div class="space-y-2">
            <p class="text-xs text-zinc-500">
              {dateFor(post)}
            </p>
            <h3 class="text-base font-medium text-zinc-200 leading-snug group-hover:text-white transition-colors line-clamp-2">
              {post.data.title}
            </h3>
            {descFor(post) && (
              <p class="text-sm text-zinc-500 leading-relaxed line-clamp-2">
                {descFor(post)}
              </p>
            )}
          </div>
        </a>
      ))}
    </div>

    <!-- Mobile view all link -->
    <div class="mt-10 sm:hidden text-center">
      <a
        href="/blog/"
        class="inline-flex items-center gap-2 text-sm font-medium text-zinc-400 hover:text-zinc-100 transition-colors"
      >
        {t("reading.viewall.mobile")}
        <LuArrowRight className="w-4 h-4" />
      </a>
    </div>
  </div>
</section>
