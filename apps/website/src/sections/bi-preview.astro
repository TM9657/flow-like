---
import { translationsCommon } from "../i18n/locales/pages/common";

const lang = "en";
const t = (key: string) => {
  const value = (translationsCommon as Record<string, Record<string, string>>)[lang]?.[key];
  return value || key;
};
---

<section class="relative py-24 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-emerald-500/5 via-transparent to-transparent" />

  <div class="mx-auto max-w-7xl px-6 lg:px-8 relative">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Left: Content -->
      <div>
        <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-emerald-500/10 border border-emerald-500/20 mb-6">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-500 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
          </span>
          <span class="text-xs font-medium text-emerald-600">Flow-Like for BI</span>
        </div>

        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold tracking-tight mb-6">
          Business Intelligence<br />
          <span class="text-emerald-500">reimagined</span>
        </h2>

        <p class="text-lg text-muted-foreground mb-8 leading-relaxed">
          Traditional BI can't keep up with modern business. Connect every data source — databases, SharePoint, Teams, production systems — with AI embedded in your pipelines, not just on top.
        </p>

        <ul class="space-y-3 mb-8">
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-emerald-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-muted-foreground">Real-time data from everywhere — no more waiting for syncs</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-emerald-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-muted-foreground">AI in pipelines, not just dashboards — anomaly detection, predictions, transformations</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-emerald-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-muted-foreground">Deploy anywhere — on-prem, cloud, mobile, even offline</span>
          </li>
        </ul>

        <a href="/modern-bi" class="inline-flex items-center gap-2 px-6 py-3 bg-emerald-500 text-white rounded-full font-medium hover:bg-emerald-600 transition-colors">
          Explore Flow-Like for BI
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
      </div>

      <!-- Right: Visual -->
      <div class="relative">
        <div class="absolute -inset-4 bg-gradient-to-r from-emerald-500/20 via-primary/10 to-blue-500/20 blur-3xl opacity-40 rounded-full" />

        <div class="relative bg-card/80 backdrop-blur-xl rounded-2xl border border-border/50 p-6 shadow-xl">
          <!-- Data flow visualization -->
          <div class="grid grid-cols-3 gap-3 mb-4">
            <div class="flex flex-col items-center gap-1.5 p-3 rounded-lg bg-emerald-500/10 border border-emerald-500/20">
              <svg class="w-6 h-6 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
              </svg>
              <span class="text-[10px] font-medium text-emerald-600">Databases</span>
            </div>
            <div class="flex flex-col items-center gap-1.5 p-3 rounded-lg bg-blue-500/10 border border-blue-500/20">
              <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              <span class="text-[10px] font-medium text-blue-600">Real-time</span>
            </div>
            <div class="flex flex-col items-center gap-1.5 p-3 rounded-lg bg-violet-500/10 border border-violet-500/20">
              <svg class="w-6 h-6 text-violet-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
              <span class="text-[10px] font-medium text-violet-600">Teams</span>
            </div>
          </div>

          <!-- Flow arrow -->
          <div class="flex justify-center my-2">
            <svg class="w-6 h-6 text-muted-foreground/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
            </svg>
          </div>

          <!-- AI Pipeline -->
          <div class="p-4 rounded-xl bg-amber-500/10 border border-amber-500/30 mb-4">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-amber-500/20 flex items-center justify-center">
                <svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
              </div>
              <div>
                <span class="text-sm font-medium text-amber-600">AI-Powered Pipeline</span>
                <p class="text-[10px] text-muted-foreground">Anomaly detection • Predictions • Smart transforms</p>
              </div>
            </div>
          </div>

          <!-- Flow arrow -->
          <div class="flex justify-center my-2">
            <svg class="w-6 h-6 text-muted-foreground/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
            </svg>
          </div>

          <!-- Output -->
          <div class="grid grid-cols-2 gap-3">
            <div class="p-3 rounded-lg bg-primary/10 border border-primary/20">
              <div class="flex items-center gap-2 mb-2">
                <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7" />
                </svg>
                <span class="text-xs font-medium">Dashboards</span>
              </div>
              <div class="flex items-end gap-0.5 h-8">
                <div class="flex-1 bg-primary/30 rounded-t" style="height: 40%"></div>
                <div class="flex-1 bg-primary/40 rounded-t" style="height: 70%"></div>
                <div class="flex-1 bg-primary/30 rounded-t" style="height: 55%"></div>
                <div class="flex-1 bg-primary/50 rounded-t" style="height: 85%"></div>
                <div class="flex-1 bg-primary/40 rounded-t" style="height: 60%"></div>
              </div>
            </div>
            <div class="p-3 rounded-lg bg-emerald-500/10 border border-emerald-500/20">
              <div class="flex items-center gap-2 mb-2">
                <svg class="w-4 h-4 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
                <span class="text-xs font-medium">Mobile</span>
              </div>
              <div class="space-y-1">
                <div class="h-1.5 bg-emerald-500/30 rounded-full w-3/4"></div>
                <div class="h-1.5 bg-emerald-500/20 rounded-full w-full"></div>
                <div class="h-1.5 bg-emerald-500/30 rounded-full w-1/2"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
