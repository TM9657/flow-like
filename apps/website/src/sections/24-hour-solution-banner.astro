---
import { LuArrowRight } from "react-icons/lu";
import type { Lang, TranslationKey } from "../i18n";
import { translations, defaultLang } from "../i18n";

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = (key: TranslationKey): string => {
  const langTranslations = translations[lang] as Record<string, string>;
  const enTranslations = translations.en as Record<string, string>;
  return langTranslations?.[key] ?? enTranslations[key] ?? key;
};
---

<section class="relative py-16">
  <!-- Single horizontal accent line -->
  <div class="absolute top-0 left-0 right-0 h-px bg-border/30" />

  <div class="mx-auto max-w-6xl px-6 lg:px-8">
    <div class="flex flex-col lg:flex-row items-start lg:items-center justify-between gap-8 lg:gap-16">
      <!-- Left: Minimal text -->
      <div class="flex-1">
        <p class="text-[10px] font-medium tracking-[0.4em] uppercase text-muted-foreground mb-3">
          {t("banner24.tagline")}
        </p>
        <h3 class="text-2xl sm:text-3xl lg:text-4xl font-bold tracking-tight mb-3">
          {t("banner24.headline")} <span class="text-primary">{t("banner24.headline.highlight")}</span>
        </h3>
        <p class="text-muted-foreground max-w-md">
          {t("banner24.description")}
        </p>
      </div>

      <!-- Right: Single CTA -->
      <a
        href="/24-hour-solution"
        class="group inline-flex items-center gap-4 text-sm font-medium"
      >
        <span class="flex items-center justify-center w-12 h-12 rounded-full border border-primary/30 text-primary group-hover:bg-primary group-hover:text-primary-foreground transition-all">
          <LuArrowRight className="w-5 h-5 group-hover:translate-x-0.5 transition-transform" />
        </span>
        <span class="text-muted-foreground group-hover:text-foreground transition-colors">
          {t("banner24.learnmore")}
        </span>
      </a>
    </div>
  </div>

  <!-- Bottom accent -->
  <div class="absolute bottom-0 left-0 right-0 h-px bg-border/30" />
</section>
