---
import "@tm9657/flow-like-ui/global.css";
import "../styles/website-base.css";
import { BlogFooter } from "../components/blog-footer";
import { Header } from "../components/header";
import PostHog from "../components/posthog.astro";
import type { CollectionEntry } from "astro:content";
import { getOgLocale, type HreflangLink } from "../lib/seo";

type BlogLayoutData = Partial<CollectionEntry<"blog">["data"]> & {
	title?: string;
	description?: string;
	canonical?: string;
	noindex?: boolean;
	lang?: string;
	alternateLinks?: HreflangLink[];
};

const { data } = Astro.props as { data: BlogLayoutData };

const site = Astro.site ?? import.meta.env.SITE ?? "https://flow-like.com";
const siteUrl = typeof site === "string" ? site : site.toString();
const canonical = data.canonical ?? new URL(Astro.url.pathname, siteUrl).toString();
const htmlLang = data.lang ?? "en";
const ogLocale = getOgLocale(htmlLang);
const alternateLinks = data.alternateLinks ?? [];

const title = data.title ?? "Flow-Like Blog";
const desc = data.description ?? "Enterprise-grade workflow automation built for scale.";
const tags = data.tags ?? [];

function toAbsoluteUrl(value: string | undefined, base: string): string | undefined {
	if (!value) return undefined;
	try {
		return new URL(value, base).toString();
	} catch {
		return undefined;
	}
}

function toIsoDate(d: string | Date | undefined): string | undefined {
	if (!d) return undefined;
	if (d instanceof Date) return d.toISOString();
	if (typeof d === "string") {
		// If itâ€™s exactly YYYY-MM-DD, pin to UTC midnight to avoid TZ shifts
		if (/^\d{4}-\d{2}-\d{2}$/.test(d)) return `${d}T00:00:00.000Z`;
		const parsed = new Date(d);
		return isNaN(parsed.getTime()) ? undefined : parsed.toISOString();
	}
	return undefined;
}

function mimeFromImageUrl(url: string): string | undefined {
	try {
		const ext = new URL(url).pathname.split(".").pop()?.toLowerCase();
		if (!ext) return undefined;
		const mimeByExt: Record<string, string> = {
			jpg: "image/jpeg",
			jpeg: "image/jpeg",
			png: "image/png",
			webp: "image/webp",
			gif: "image/gif",
			avif: "image/avif",
			svg: "image/svg+xml",
		};
		return mimeByExt[ext];
	} catch {
		return undefined;
	}
}

const pubISO = toIsoDate(data.date);
const updISO = toIsoDate(data.updated ?? data.date);
const isArticle = Boolean(pubISO);
const rawOgImage = data.cover ?? "/og.png";
const ogImage = toAbsoluteUrl(rawOgImage, siteUrl) ?? new URL("/og.png", siteUrl).toString();
const ogImageType = mimeFromImageUrl(ogImage);
const ogImageAlt = `${title} preview image`;
const robots = data.noindex
	? "noindex,nofollow,max-image-preview:none"
	: "index,follow,max-image-preview:large,max-snippet:-1,max-video-preview:-1";

const ldStructuredData = isArticle
	? {
			"@context": "https://schema.org",
			"@type": "BlogPosting",
			headline: title,
			description: desc,
			url: canonical,
			mainEntityOfPage: canonical,
			datePublished: pubISO,
			dateModified: updISO ?? pubISO,
			image: [ogImage],
			keywords: tags.length > 0 ? tags.join(", ") : undefined,
			author: {
				"@type": "Organization",
				name: "Flow-Like",
			},
			publisher: {
				"@type": "Organization",
				name: "Flow-Like",
				logo: {
					"@type": "ImageObject",
					url: new URL("/favicon-32x32.png", siteUrl).toString(),
				},
			},
		}
	: {
			"@context": "https://schema.org",
			"@type": "WebPage",
			name: title,
			description: desc,
			url: canonical,
		};
---

<!doctype html>
<html lang={htmlLang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<meta name="description" content={desc} />
		<meta name="author" content="Flow-Like" />
		<meta name="robots" content={robots} />
		<meta name="referrer" content="strict-origin-when-cross-origin" />
		<link rel="canonical" href={canonical} />
		{
			alternateLinks.map((alt) => (
				<link rel="alternate" hreflang={alt.hreflang} href={alt.href} />
			))
		}
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link rel="alternate" type="application/rss+xml" title="Flow-Like Blog" href="/rss.xml" />

		<!-- Open Graph -->
		<meta property="og:type" content={isArticle ? "article" : "website"} />
		<meta property="og:site_name" content="Flow-Like" />
		<meta property="og:url" content={canonical} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={desc} />
		<meta property="og:image" content={ogImage} />
		<meta property="og:image:secure_url" content={ogImage} />
		<meta property="og:image:alt" content={ogImageAlt} />
		{ogImageType && <meta property="og:image:type" content={ogImageType} />}
		<meta property="og:locale" content={ogLocale} />
		{
			isArticle && pubISO && (
				<meta property="article:published_time" content={pubISO} />
			)
		}
		{
			isArticle && updISO && (
				<meta property="article:modified_time" content={updISO} />
			)
		}
		{isArticle && tags.map((tag) => <meta property="article:tag" content={tag} />)}

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@greatco_de" />
		<meta name="twitter:creator" content="@greatco_de" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={desc} />
		<meta name="twitter:image" content={ogImage} />
		<meta name="twitter:image:alt" content={ogImageAlt} />

		{tags.length > 0 && <meta name="keywords" content={tags.join(", ")} />}
		<script type="application/ld+json" is:inline set:html={JSON.stringify(ldStructuredData)} />
		<PostHog />
	</head>
	<body class="flex flex-col min-h-screen bg-background text-foreground bg-dot pt-16">
		<div class="pointer-events-none fixed inset-0 h-full w-full bg-white bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] -z-[100]"/>
		<Header client:load/>
		<main class="flex flex-col flex-grow py-2 md:py-2 lg:py-6 xl:py-8 2xl:py-16">
			<slot />
		</main>
		<BlogFooter />
	</body>
</html>
