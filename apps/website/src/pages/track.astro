---
import "@tm9657/flow-like-ui/global.css";
import "../styles/website-base.css";
import PostHog from "../components/posthog.astro";
import { SolutionTracker } from "../components/solution-tracker";
import { Header } from "../components/header";
import { BlogFooter } from "../components/blog-footer";

const site = Astro.site ?? import.meta.env.SITE ?? "https://flow-like.com";
const canonical = new URL(Astro.url.pathname, site).toString();

const title = "Track Your Solution | Flow-Like";
const desc = "View the status of your 24-hour solution request. Track progress from submission to delivery.";
const cover = "/og.png";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={desc} />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="canonical" href={canonical} />
    <meta name="theme-color" content="#ffffff" />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Flow-Like" />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={desc} />
    <meta property="og:image" content={cover} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={desc} />
    <meta name="twitter:image" content={cover} />

    <PostHog />


  </head>
  <body class="bg-background text-foreground antialiased overflow-x-hidden max-w-full">
    <Header client:load />

    <main class="pt-24 pb-16 min-h-screen">
      <!-- Decorative background -->
      <div aria-hidden="true" class="pointer-events-none fixed inset-0 -z-10 overflow-hidden">
        <div class="absolute inset-0 opacity-[0.08] mask-[radial-gradient(60%_60%_at_50%_20%,black,transparent)] bg-[linear-gradient(to_right,color-mix(in_oklch,var(--foreground)_8%,transparent)_1px,transparent_1px),linear-gradient(to_bottom,color-mix(in_oklch,var(--foreground)_8%,transparent)_1px,transparent_1px)] bg-size-[32px_32px]" />
      </div>

      <div class="mx-auto max-w-6xl px-6 lg:px-8">
        <!-- Header -->
        <header class="text-center mb-12">
          <div class="inline-flex items-center gap-2 rounded-full border border-primary/20 bg-primary/10 px-3 py-1.5 text-xs font-medium text-primary mb-4 backdrop-blur">
            <div class="h-2 w-2 animate-pulse rounded-full bg-primary" />
            Solution Tracking
          </div>
          <h1 class="text-balance bg-linear-to-b from-foreground to-foreground/70 bg-clip-text text-4xl font-bold tracking-tight text-transparent md:text-5xl">
            Track Your Solution
          </h1>
          <p class="mx-auto mt-4 max-w-2xl text-pretty text-base text-muted-foreground md:text-lg">
            Enter your tracking token to view the current status of your 24-hour solution request.
          </p>
        </header>

        <!-- Tracker Component -->
        <SolutionTracker client:load />

        <!-- Back Link -->
        <div class="mt-12 text-center">
          <a
            href="/24-hour-solution"
            class="inline-flex items-center gap-2 text-sm text-muted-foreground hover:text-primary transition-colors"
          >
            ‚Üê Back to 24-Hour Solution
          </a>
        </div>
      </div>
    </main>

    <BlogFooter client:load />
  </body>
</html>
