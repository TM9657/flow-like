---
import "@tm9657/flow-like-ui/global.css";
import PostHog from "../components/posthog.astro";
import { SolutionForm } from "../components/solution-form";
import { BlogHeader } from "../components/blog-header";
import { BlogFooter } from "../components/blog-footer";

const site = Astro.site ?? import.meta.env.SITE ?? "https://flow-like.com";
const canonical = new URL(Astro.url.pathname, site).toString();

const title = "The 24 Hour Solution | Flow-Like";
const desc = "We build your fully functional automation or GenAI application within 24 hours. €2,400. No prototype phase.";
const cover = "/og.png";
---

<!doctype html>
<html lang="en" class="scroll-smooth" style="overflow-x: hidden;">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={desc} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonical} />
    <meta name="theme-color" content="#ffffff" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Flow-Like" />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={desc} />
    <meta property="og:image" content={cover} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={desc} />
    <meta name="twitter:image" content={cover} />

    <PostHog />

    <style is:global>
      @media (max-width: 768px) {
        * { scroll-snap-type: none !important; }
        html { scroll-behavior: auto !important; }
        html, body, main, section, [role="region"] { overflow: visible !important; }
        .sticky, [style*="position: sticky"] { position: static !important; }
      }

      html, body { min-height: 100%; }
      html, body {
        overflow-y: auto;
        overflow-x: hidden !important;
        max-width: 100vw;
        -webkit-overflow-scrolling: touch;
        touch-action: pan-y;
      }
      :root, body, #content { overscroll-behavior: auto; }
    </style>
  </head>
  <body class="bg-background text-foreground antialiased overflow-x-hidden max-w-full"
        style="overflow-y: auto !important;"
  >
    <BlogHeader client:load />

    <main class="pt-16">
      <!-- Hero Section -->
      <section class="relative min-h-[90vh] flex items-center">
        <div class="mx-auto max-w-6xl px-6 lg:px-8 py-24 w-full">
          <!-- Central 24 -->
          <div class="text-center mb-16 lg:mb-20">
            <p class="text-[11px] font-medium tracking-[0.3em] uppercase text-muted-foreground mb-6">
              From Idea to Production
            </p>
            <div class="relative inline-block">
              <span class="text-[12rem] sm:text-[16rem] lg:text-[20rem] font-bold tracking-tighter leading-none text-primary/10">
                24
              </span>
              <div class="absolute inset-0 flex items-center justify-center">
                <span class="text-6xl sm:text-7xl lg:text-8xl font-semibold tracking-tight text-primary">
                  24
                </span>
              </div>
            </div>
            <p class="text-xl sm:text-2xl text-muted-foreground -mt-4 mb-2">hours</p>
            <h1 class="text-2xl sm:text-3xl lg:text-4xl font-semibold tracking-tight mt-6 mb-6">
              Your automation, <span class="text-primary">built overnight.</span>
            </h1>
            <p class="text-lg text-muted-foreground leading-relaxed max-w-xl mx-auto mb-4">
              We take your idea and deliver a production-ready automation or GenAI application. No prototype. No waiting.
            </p>
            <p class="text-sm font-medium text-primary mb-10">
              Batteries included — Infrastructure, hosting, and everything you need to run.
            </p>

            <!-- CTA -->
            <div class="flex flex-wrap items-center justify-center gap-6">
              <a
                href="#form"
                class="inline-flex items-center gap-3 text-sm font-medium group"
              >
                <span class="flex items-center justify-center w-12 h-12 rounded-full border border-primary text-primary group-hover:bg-primary group-hover:text-primary-foreground transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                  </svg>
                </span>
                <span class="border-b border-transparent group-hover:border-foreground transition-colors">Start your project</span>
              </a>
              <a
                href="#process"
                class="text-sm text-muted-foreground hover:text-foreground transition-colors"
              >
                How it works
              </a>
            </div>
          </div>

          <!-- Pricing Cards -->
          <div class="max-w-3xl mx-auto">
            <div class="grid md:grid-cols-2 gap-6">
              <!-- Standard Tier -->
              <div class="relative group">
                <div class="absolute -inset-px bg-linear-to-br from-primary/20 via-primary/5 to-transparent rounded-2xl group-hover:from-primary/30 transition-all duration-300" />
                <div class="relative h-full p-8 border border-border rounded-2xl bg-background/80 backdrop-blur-sm flex flex-col">
                  <div class="mb-6">
                    <p class="text-[11px] font-medium tracking-[0.3em] uppercase text-muted-foreground mb-3">
                      Standard
                    </p>
                    <div class="flex items-baseline gap-2">
                      <span class="text-4xl lg:text-5xl font-bold tracking-tight text-primary">€2,400</span>
                    </div>
                    <p class="text-sm text-muted-foreground mt-2">
                      Pay after delivery
                    </p>
                    <p class="text-xs text-muted-foreground mt-1">
                      Full ownership, deploy anywhere
                    </p>
                  </div>

                  <div class="space-y-3 mb-8 flex-1">
                    <div class="flex items-center gap-3 text-sm">
                      <svg class="w-4 h-4 text-primary shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span>24h development sprint</span>
                    </div>
                    <div class="flex items-center gap-3 text-sm">
                      <svg class="w-4 h-4 text-primary shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span class="font-medium">Unlimited users & API calls</span>
                    </div>
