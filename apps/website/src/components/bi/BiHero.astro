---
interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;
---

<section class="relative min-h-[90vh] flex items-center overflow-hidden">
  <!-- Animated background -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 -left-32 w-96 h-96 bg-primary/10 rounded-full blur-3xl animate-pulse" style="animation-duration: 4s;" />
    <div class="absolute bottom-1/4 -right-32 w-96 h-96 bg-violet-500/10 rounded-full blur-3xl animate-pulse" style="animation-duration: 5s; animation-delay: 1s;" />
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-emerald-500/5 rounded-full blur-3xl animate-pulse" style="animation-duration: 6s; animation-delay: 2s;" />
  </div>

  <div class="mx-auto max-w-7xl px-6 lg:px-8 py-24 w-full relative z-10">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Left: Content -->
      <div class="text-left">
        <p class="text-[11px] font-medium tracking-[0.3em] uppercase text-primary mb-6">
          {t("bi.hero.tagline")}
        </p>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight mb-6 leading-[1.1]">
          {t("bi.hero.headline")} <span class="bg-gradient-to-r from-primary via-violet-500 to-emerald-500 bg-clip-text text-transparent">{t("bi.hero.headline.highlight")}</span> {t("bi.hero.headline.end")}
        </h1>

        <p class="text-lg sm:text-xl text-muted-foreground leading-relaxed max-w-xl mb-10">
          {t("bi.hero.description")}
        </p>

        <div class="flex flex-wrap items-center gap-4">
          <a href="/download" class="group inline-flex items-center gap-3 px-7 py-4 bg-primary text-primary-foreground rounded-full font-medium hover:bg-primary/90 transition-all hover:gap-4 hover:shadow-lg hover:shadow-primary/25">
            {t("bi.hero.cta.primary")}
            <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </a>
          <a href="#solution" class="inline-flex items-center gap-2 px-6 py-4 text-sm font-medium text-muted-foreground hover:text-foreground transition-colors border border-border/50 rounded-full hover:border-border hover:bg-card/50">
            {t("bi.hero.cta.secondary")}
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Right: AI Data Pipeline Visual -->
      <div class="relative">
        <div class="absolute -inset-8 bg-gradient-to-r from-primary/20 via-violet-500/20 to-emerald-500/20 blur-3xl opacity-50 rounded-full animate-pulse" style="animation-duration: 3s;" />

        <div class="relative">
          <!-- Main pipeline visualization -->
          <div class="bg-card/80 backdrop-blur-xl rounded-3xl border border-border/50 p-8 shadow-2xl">
            <div class="space-y-6">
              <!-- Pipeline stages -->
              <div class="flex items-center gap-4">
                <!-- Data Sources -->
                <div class="flex-1">
                  <div class="flex items-center gap-2 mb-3">
                    <div class="w-8 h-8 rounded-lg bg-blue-500/10 flex items-center justify-center">
                      <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
                      </svg>
                    </div>
                    <span class="text-xs font-medium">Sources</span>
                  </div>
                  <div class="space-y-2">
                    <div class="h-6 w-full rounded bg-blue-500/10 border border-blue-500/20 flex items-center px-2 animate-pulse" style="animation-duration: 2s;">
                      <div class="h-1.5 w-3/4 bg-blue-500/40 rounded" />
                    </div>
                    <div class="h-6 w-full rounded bg-blue-500/10 border border-blue-500/20 flex items-center px-2 animate-pulse" style="animation-duration: 2.5s;">
                      <div class="h-1.5 w-1/2 bg-blue-500/40 rounded" />
                    </div>
                    <div class="h-6 w-full rounded bg-blue-500/10 border border-blue-500/20 flex items-center px-2 animate-pulse" style="animation-duration: 3s;">
                      <div class="h-1.5 w-2/3 bg-blue-500/40 rounded" />
                    </div>
                  </div>
                </div>

                <!-- Arrow 1 -->
                <div class="flex-shrink-0">
                  <svg class="w-8 h-8 text-muted-foreground/30" viewBox="0 0 24 24">
                    <path fill="currentColor" d="M8 5v14l11-7z" />
                  </svg>
                </div>

                <!-- AI Processing (center, highlighted) -->
                <div class="flex-1 relative">
                  <div class="absolute -inset-2 bg-gradient-to-r from-primary/20 to-violet-500/20 rounded-xl blur-xl animate-pulse" style="animation-duration: 2s;" />
                  <div class="relative bg-gradient-to-br from-primary/10 to-violet-500/10 rounded-xl border-2 border-primary/30 p-4">
                    <div class="flex items-center gap-2 mb-3">
                      <div class="w-8 h-8 rounded-lg bg-primary/20 flex items-center justify-center">
                        <svg class="w-5 h-5 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                        </svg>
                      </div>
                      <span class="text-xs font-semibold text-primary">AI Pipeline</span>
                    </div>
                    <div class="space-y-2">
                      <div class="flex items-center gap-2 text-[10px] text-muted-foreground">
                        <span class="w-1.5 h-1.5 rounded-full bg-emerald-500 animate-pulse" />
                        Transform
                      </div>
                      <div class="flex items-center gap-2 text-[10px] text-muted-foreground">
                        <span class="w-1.5 h-1.5 rounded-full bg-emerald-500 animate-pulse" style="animation-delay: 0.2s;" />
                        Enrich
                      </div>
                      <div class="flex items-center gap-2 text-[10px] text-muted-foreground">
                        <span class="w-1.5 h-1.5 rounded-full bg-emerald-500 animate-pulse" style="animation-delay: 0.4s;" />
                        Predict
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Arrow 2 -->
                <div class="flex-shrink-0">
                  <svg class="w-8 h-8 text-muted-foreground/30" viewBox="0 0 24 24">
                    <path fill="currentColor" d="M8 5v14l11-7z" />
                  </svg>
                </div>

                <!-- Output -->
                <div class="flex-1">
                  <div class="flex items-center gap-2 mb-3">
                    <div class="w-8 h-8 rounded-lg bg-emerald-500/10 flex items-center justify-center">
                      <svg class="w-4 h-4 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                      </svg>
                    </div>
                    <span class="text-xs font-medium">Insights</span>
                  </div>
                  <div class="space-y-2">
                    <div class="h-10 rounded-lg bg-gradient-to-r from-emerald-500/10 to-emerald-500/5 border border-emerald-500/20 p-2 flex items-end gap-1">
                      {[30, 50, 40, 70, 55, 80, 65].map((h, i) => (
                        <div class="flex-1 bg-emerald-500/50 rounded-sm animate-pulse" style={`height: ${h}%; animation-delay: ${i * 0.1}s;`} />
                      ))}
                    </div>
                    <div class="flex gap-2">
                      <div class="flex-1 h-6 rounded bg-emerald-500/10 border border-emerald-500/20 flex items-center justify-center">
                        <span class="text-[10px] font-medium text-emerald-600">+34%</span>
                      </div>
                      <div class="flex-1 h-6 rounded bg-violet-500/10 border border-violet-500/20 flex items-center justify-center">
                        <span class="text-[10px] font-medium text-violet-600">12.4k</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Bottom info -->
              <div class="flex items-center justify-between pt-4 border-t border-border/50">
                <div class="flex items-center gap-2">
                  <span class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse" />
                  <span class="text-xs text-muted-foreground">Pipeline active</span>
                </div>
                <div class="flex items-center gap-4 text-xs text-muted-foreground">
                  <span>3 sources</span>
                  <span>AI-powered</span>
                  <span>Real-time</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Floating elements -->
          <div class="absolute -top-4 -right-4 w-16 h-16 rounded-2xl bg-gradient-to-br from-violet-500/20 to-violet-500/10 border border-violet-500/30 flex items-center justify-center animate-bounce" style="animation-duration: 3s;">
            <svg class="w-8 h-8 text-violet-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>

          <div class="absolute -bottom-4 -left-4 w-14 h-14 rounded-xl bg-gradient-to-br from-emerald-500/20 to-emerald-500/10 border border-emerald-500/30 flex items-center justify-center animate-bounce" style="animation-duration: 4s; animation-delay: 1s;">
            <svg class="w-6 h-6 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
