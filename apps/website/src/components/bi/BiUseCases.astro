---
interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;

const useCases = [
  {
    title: t("bi.usecases.case1.title"),
    desc: t("bi.usecases.case1.description"),
    icon: "chart",
  },
  {
    title: t("bi.usecases.case2.title"),
    desc: t("bi.usecases.case2.description"),
    icon: "activity",
  },
  {
    title: t("bi.usecases.case3.title"),
    desc: t("bi.usecases.case3.description"),
    icon: "users",
  },
  {
    title: t("bi.usecases.case4.title"),
    desc: t("bi.usecases.case4.description"),
    icon: "package",
  },
];
---

<section class="relative py-28 bg-muted/30">
  <div class="absolute top-0 left-0 right-0 h-px bg-border" />

  <div class="mx-auto max-w-6xl px-6 lg:px-8">
    <div class="text-center mb-16">
      <p class="text-[11px] font-medium tracking-[0.3em] uppercase text-muted-foreground mb-4">
        {t("bi.usecases.tagline")}
      </p>
      <h2 class="text-3xl sm:text-4xl font-semibold tracking-tight">
        {t("bi.usecases.headline")}
      </h2>
    </div>

    <div class="grid sm:grid-cols-2 gap-6">
      {useCases.map((useCase) => (
        <div class="group p-6 rounded-2xl border border-border/50 bg-card/50 hover:border-primary/30 transition-colors">
          <div class="w-12 h-12 rounded-xl bg-primary/10 text-primary flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors">
            {useCase.icon === "chart" && (
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            )}
            {useCase.icon === "activity" && (
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            )}
            {useCase.icon === "users" && (
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            )}
            {useCase.icon === "package" && (
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
              </svg>
            )}
          </div>
          <h3 class="text-lg font-semibold mb-2">{useCase.title}</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">{useCase.desc}</p>
        </div>
      ))}
    </div>
  </div>
</section>
