---
interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;

const useCases = [
  {
    title: t("bi.usecases.case1.title"),
    desc: t("bi.usecases.case1.description"),
    icon: "command",
    color: "emerald",
    visual: "ops",
  },
  {
    title: t("bi.usecases.case2.title"),
    desc: t("bi.usecases.case2.description"),
    icon: "chart",
    color: "blue",
    visual: "exec",
  },
  {
    title: t("bi.usecases.case3.title"),
    desc: t("bi.usecases.case3.description"),
    icon: "map",
    color: "violet",
    visual: "field",
  },
  {
    title: t("bi.usecases.case4.title"),
    desc: t("bi.usecases.case4.description"),
    icon: "trending",
    color: "amber",
    visual: "sales",
  },
];
---

<section class="relative py-32 bg-muted/30">
  <div class="absolute top-0 left-0 right-0 h-px bg-border" />

  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="text-center mb-16">
      <p class="text-[11px] font-medium tracking-[0.3em] uppercase text-primary mb-4">
        {t("bi.usecases.tagline")}
      </p>
      <h2 class="text-4xl sm:text-5xl font-bold tracking-tight">
        {t("bi.usecases.headline")}
      </h2>
    </div>

    <div class="grid lg:grid-cols-2 gap-8">
      {useCases.map((useCase) => (
        <div class="group relative rounded-3xl border border-border/50 bg-card/80 backdrop-blur-sm overflow-hidden hover:shadow-xl transition-all duration-500">
          <!-- Visual preview area -->
          <div class={`
            h-48 relative overflow-hidden
            ${useCase.color === 'emerald' ? 'bg-gradient-to-br from-emerald-500/10 to-emerald-500/5' : ''}
            ${useCase.color === 'blue' ? 'bg-gradient-to-br from-blue-500/10 to-blue-500/5' : ''}
            ${useCase.color === 'violet' ? 'bg-gradient-to-br from-violet-500/10 to-violet-500/5' : ''}
            ${useCase.color === 'amber' ? 'bg-gradient-to-br from-amber-500/10 to-amber-500/5' : ''}
          `}>
            <!-- Mini dashboard visual -->
            {useCase.visual === "ops" && (
              <div class="absolute inset-4 grid grid-cols-4 gap-2">
                <div class="col-span-3 rounded-lg bg-background/50 p-3">
                  <div class="h-full flex items-end gap-1">
                    {[60, 80, 45, 90, 70, 85, 50, 95, 75, 88, 55, 92].map((h) => (
                      <div class="flex-1 bg-emerald-500/40 rounded-t group-hover:bg-emerald-500/60 transition-colors" style={`height: ${h}%`} />
                    ))}
                  </div>
                </div>
                <div class="space-y-2">
                  <div class="rounded-lg bg-background/50 p-2 flex-1">
                    <div class="w-full h-2 bg-emerald-500/30 rounded mb-1" />
                    <div class="text-[10px] text-emerald-600 font-semibold">98.2%</div>
                  </div>
                  <div class="rounded-lg bg-background/50 p-2 flex-1">
                    <div class="w-3/4 h-2 bg-amber-500/30 rounded mb-1" />
                    <div class="text-[10px] text-amber-600 font-semibold">Active</div>
                  </div>
                </div>
              </div>
            )}
            {useCase.visual === "exec" && (
              <div class="absolute inset-4 grid grid-cols-3 gap-2">
                <div class="rounded-lg bg-background/50 p-3 flex flex-col justify-between">
                  <span class="text-[10px] text-muted-foreground">Revenue</span>
                  <span class="text-lg font-bold text-blue-600">$2.4M</span>
                  <span class="text-[10px] text-emerald-500">↑ 12.5%</span>
                </div>
                <div class="rounded-lg bg-background/50 p-3 flex flex-col justify-between">
                  <span class="text-[10px] text-muted-foreground">Growth</span>
                  <span class="text-lg font-bold text-blue-600">+24%</span>
                  <span class="text-[10px] text-emerald-500">On Track</span>
                </div>
                <div class="rounded-lg bg-background/50 p-3 flex flex-col justify-between">
                  <span class="text-[10px] text-muted-foreground">NPS</span>
                  <span class="text-lg font-bold text-blue-600">72</span>
                  <span class="text-[10px] text-emerald-500">↑ 8 pts</span>
                </div>
                <div class="col-span-3 rounded-lg bg-background/50 p-3">
                  <svg class="w-full h-12" viewBox="0 0 200 40">
                    <path d="M0 35 Q30 30 60 20 T120 25 T180 8 T200 12" fill="none" stroke="currentColor" stroke-width="2" class="text-blue-500/50" />
                  </svg>
                </div>
              </div>
            )}
            {useCase.visual === "field" && (
              <div class="absolute inset-4 flex gap-2">
                <div class="w-1/2 rounded-lg bg-background/50 p-2 relative overflow-hidden">
                  <!-- Simple map representation -->
                  <div class="absolute inset-0 bg-violet-500/5">
                    <div class="absolute top-1/4 left-1/3 w-3 h-3 rounded-full bg-violet-500 animate-pulse" />
                    <div class="absolute top-1/2 left-1/2 w-2 h-2 rounded-full bg-violet-500/50 animate-pulse" style="animation-delay: 0.5s;" />
                    <div class="absolute top-2/3 left-1/4 w-2 h-2 rounded-full bg-violet-500/50 animate-pulse" style="animation-delay: 1s;" />
                  </div>
                </div>
                <div class="w-1/2 space-y-2">
                  <div class="rounded-lg bg-background/50 p-2">
                    <div class="text-[10px] text-violet-600 font-medium">Current Job</div>
                    <div class="text-[10px] text-muted-foreground">Site #2847</div>
                  </div>
                  <div class="rounded-lg bg-background/50 p-2">
                    <div class="text-[10px] text-emerald-600 flex items-center gap-1">
                      <span class="w-2 h-2 rounded-full bg-emerald-500" />
                      Synced
                    </div>
                  </div>
                  <div class="rounded-lg bg-background/50 p-2">
                    <div class="text-[10px] text-muted-foreground">3 tasks left</div>
                  </div>
                </div>
              </div>
            )}
            {useCase.visual === "sales" && (
              <div class="absolute inset-4 grid grid-cols-2 gap-2">
                <div class="rounded-lg bg-background/50 p-3">
                  <div class="text-[10px] text-muted-foreground mb-2">Pipeline</div>
                  <div class="space-y-1">
                    <div class="flex items-center gap-2">
                      <div class="w-full h-2 bg-amber-500/30 rounded-full">
                        <div class="w-3/4 h-full bg-amber-500 rounded-full" />
                      </div>
                      <span class="text-[10px]">$1.2M</span>
                    </div>
                    <div class="flex items-center gap-2">
                      <div class="w-full h-2 bg-emerald-500/30 rounded-full">
                        <div class="w-1/2 h-full bg-emerald-500 rounded-full" />
                      </div>
                      <span class="text-[10px]">$800K</span>
                    </div>
                  </div>
                </div>
                <div class="rounded-lg bg-background/50 p-3">
                  <div class="text-[10px] text-muted-foreground mb-2">Win Rate</div>
                  <div class="text-2xl font-bold text-amber-600">34%</div>
                  <div class="text-[10px] text-emerald-500">↑ 5%</div>
                </div>
                <div class="col-span-2 rounded-lg bg-background/50 p-2 flex items-center gap-2">
                  <div class="w-8 h-8 rounded-full bg-amber-500/20 flex items-center justify-center text-[10px]">JD</div>
                  <div>
                    <div class="text-[10px] font-medium">John Doe - Acme Corp</div>
                    <div class="text-[10px] text-muted-foreground">Follow-up due today</div>
                  </div>
                </div>
              </div>
            )}
          </div>

          <!-- Content -->
          <div class="p-6">
            <div class="flex items-start gap-4">
              <div class={`
                shrink-0 w-12 h-12 rounded-xl flex items-center justify-center
                ${useCase.color === 'emerald' ? 'bg-emerald-500/10 text-emerald-500' : ''}
                ${useCase.color === 'blue' ? 'bg-blue-500/10 text-blue-500' : ''}
                ${useCase.color === 'violet' ? 'bg-violet-500/10 text-violet-500' : ''}
                ${useCase.color === 'amber' ? 'bg-amber-500/10 text-amber-500' : ''}
              `}>
                {useCase.icon === "command" && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                )}
                {useCase.icon === "chart" && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                )}
                {useCase.icon === "map" && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                )}
                {useCase.icon === "trending" && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                  </svg>
                )}
              </div>
              <div>
                <h3 class="text-xl font-semibold mb-2">{useCase.title}</h3>
                <p class="text-muted-foreground leading-relaxed">{useCase.desc}</p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
