---
interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;

const problems = [
  { icon: "template", title: t("bi.problem.item1.title"), desc: t("bi.problem.item1.description") },
  { icon: "dollar", title: t("bi.problem.item2.title"), desc: t("bi.problem.item2.description") },
  { icon: "lock", title: t("bi.problem.item3.title"), desc: t("bi.problem.item3.description") },
  { icon: "puzzle", title: t("bi.problem.item4.title"), desc: t("bi.problem.item4.description") },
];
---

<section class="relative py-28 bg-muted/30">
  <div class="absolute top-0 left-0 right-0 h-px bg-border" />

  <div class="mx-auto max-w-6xl px-6 lg:px-8">
    <div class="text-center mb-16">
      <p class="text-[11px] font-medium tracking-[0.3em] uppercase text-muted-foreground mb-4">
        {t("bi.problem.tagline")}
      </p>
      <h2 class="text-3xl sm:text-4xl font-semibold tracking-tight mb-6">
        {t("bi.problem.headline")}
      </h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        {t("bi.problem.description")}
      </p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {problems.map((problem) => (
        <div class="group p-6 rounded-2xl border border-border/50 bg-card/50 hover:border-destructive/30 hover:bg-destructive/5 transition-all duration-300">
          <div class="w-12 h-12 rounded-xl bg-destructive/10 text-destructive flex items-center justify-center mb-4 group-hover:bg-destructive/20 transition-colors">
            {problem.icon === "template" && (
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
              </svg>
            )}
            {problem.icon === "dollar" && (
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            )}
            {problem.icon === "lock" && (
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            )}
            {problem.icon === "puzzle" && (
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />
              </svg>
            )}
          </div>
          <h3 class="text-lg font-semibold mb-2">{problem.title}</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">{problem.desc}</p>
        </div>
      ))}
    </div>
  </div>
</section>
