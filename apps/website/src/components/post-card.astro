---
const { entry, variant = "lead" } = Astro.props;
const { title, description, date, tags, cover } = entry.data;
const href = "/blog/" + entry.slug.split("-").slice(3).join("-") + "/";

const formatDate = (d: Date) =>
  d.toLocaleDateString("en-US", { month: "short", day: "numeric", year: "numeric" });

const tagColors: Record<string, string> = {
  release: "bg-emerald-500/10 text-emerald-700 dark:text-emerald-400 border-emerald-500/20",
  tutorial: "bg-blue-500/10 text-blue-700 dark:text-blue-400 border-blue-500/20",
  comparison: "bg-violet-500/10 text-violet-700 dark:text-violet-400 border-violet-500/20",
  announcement: "bg-amber-500/10 text-amber-700 dark:text-amber-400 border-amber-500/20",
};

const getTagStyle = (tag: string) =>
  tagColors[tag] ?? "bg-muted text-muted-foreground border-border/50";

const displayTags = (tags ?? []).slice(0, 3);
---

{variant === "lead" ? (
  <a href={href} class="group block">
    <article class="relative overflow-hidden rounded-2xl border border-border/50 bg-card/50 backdrop-blur-sm transition-all duration-300 hover:border-border hover:shadow-xl hover:shadow-primary/5">
      <div class="grid md:grid-cols-2">
        <div class="relative aspect-[16/10] md:aspect-auto overflow-hidden">
          {cover ? (
            <img
              src={cover}
              alt={title}
              width={1280}
              height={896}
              loading="eager"
              class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
            />
          ) : (
            <div class="h-full w-full bg-gradient-to-br from-primary/10 to-violet-500/10" />
          )}
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent md:bg-gradient-to-r md:from-transparent md:to-black/5" />
        </div>

        <div class="flex flex-col justify-center p-6 sm:p-8 lg:p-10">
          <div class="flex flex-wrap items-center gap-2 mb-4">
            {displayTags.map((tag: string) => (
              <span class={`inline-flex items-center rounded-full border px-2.5 py-0.5 text-[11px] font-medium ${getTagStyle(tag)}`}>
                {tag}
              </span>
            ))}
          </div>

          <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold tracking-tight leading-tight mb-3 group-hover:text-primary transition-colors">
            {title}
          </h2>

          {description && (
            <p class="text-base sm:text-lg text-muted-foreground leading-relaxed mb-6 line-clamp-3">
              {description}
            </p>
          )}

          <div class="flex items-center gap-3 mt-auto">
            <time datetime={date.toISOString()} class="text-sm text-muted-foreground">
              {formatDate(date)}
            </time>
            <span class="text-muted-foreground/30">Â·</span>
            <span class="inline-flex items-center gap-1.5 text-sm font-medium text-primary opacity-0 -translate-x-2 transition-all duration-300 group-hover:opacity-100 group-hover:translate-x-0">
              Read article
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </span>
          </div>
        </div>
      </div>
    </article>
  </a>
) : (
  <a href={href} class="group block h-full">
    <article class="relative flex flex-col h-full overflow-hidden rounded-2xl border border-border/50 bg-card/50 backdrop-blur-sm transition-all duration-300 hover:border-border hover:shadow-lg hover:shadow-primary/5 hover:-translate-y-0.5">
      <div class="relative aspect-[16/10] overflow-hidden">
        {cover ? (
          <img
            src={cover}
            alt={title}
            width={640}
            height={400}
            loading="lazy"
            class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
          />
        ) : (
          <div class="h-full w-full bg-gradient-to-br from-primary/10 to-violet-500/10" />
        )}
        <div class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent" />
      </div>

      <div class="flex flex-col flex-grow p-5 sm:p-6">
        <div class="flex flex-wrap items-center gap-1.5 mb-3">
          {displayTags.map((tag: string) => (
            <span class={`inline-flex items-center rounded-full border px-2 py-0.5 text-[10px] font-medium ${getTagStyle(tag)}`}>
              {tag}
            </span>
          ))}
        </div>

        <h2 class="text-lg sm:text-xl font-bold tracking-tight leading-snug mb-2 group-hover:text-primary transition-colors line-clamp-2">
          {title}
        </h2>

        {description && (
          <p class="text-sm text-muted-foreground leading-relaxed mb-4 line-clamp-2 flex-grow">
            {description}
          </p>
        )}

        <div class="flex items-center justify-between mt-auto pt-3 border-t border-border/30">
          <time datetime={date.toISOString()} class="text-xs text-muted-foreground">
            {formatDate(date)}
          </time>
          <span class="inline-flex items-center gap-1 text-xs font-medium text-primary opacity-0 transition-all duration-300 group-hover:opacity-100">
            Read
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </span>
        </div>
      </div>
    </article>
  </a>
)}