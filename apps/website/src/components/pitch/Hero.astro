---
interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;
---

<section class="relative min-h-[80vh] flex items-center pt-8">
  <div class="mx-auto max-w-5xl px-6 lg:px-8 py-12 w-full">
    <div class="text-center">
      <p class="text-[11px] font-medium tracking-[0.3em] uppercase text-muted-foreground mb-8">
        {t("pitch.hero.tagline")}
      </p>
      <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold tracking-tight mb-6">
        {t("pitch.hero.headline")}
        <br />
        <span class="text-primary">{t("pitch.hero.headline.highlight")}</span>
      </h1>
      <p class="text-xl text-muted-foreground leading-relaxed max-w-2xl mx-auto mb-12">
        {t("pitch.hero.description")}
      </p>

      <div class="flex flex-wrap items-center justify-center gap-6">
        <a
          href="mailto:enterprise@flow-like.com?subject=Demo%20Request"
          class="inline-flex items-center gap-3 bg-primary text-primary-foreground px-8 py-3.5 rounded-lg text-sm font-medium hover:bg-primary/90 transition-colors"
        >
          {t("pitch.hero.cta.demo")}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
        <a href="#solution" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
          {t("pitch.hero.cta.learn")}
        </a>
      </div>
    </div>
  </div>
</section>
