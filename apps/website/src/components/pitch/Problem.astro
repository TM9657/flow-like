---
interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;

const cards = [
  { key: "card1", icon: "clock" },
  { key: "card2", icon: "shield" },
  { key: "card3", icon: "lock" },
] as const;
---

<section class="relative py-28">
  <div class="absolute top-0 left-0 right-0 h-px bg-border" />

  <div class="mx-auto max-w-5xl px-6 lg:px-8">
    <div class="mb-16">
      <p class="text-[11px] font-medium tracking-[0.3em] uppercase text-muted-foreground mb-4">
        {t("pitch.problem.tagline")}
      </p>
      <h2 class="text-3xl sm:text-4xl font-semibold tracking-tight max-w-2xl">
        {t("pitch.problem.headline")}
      </h2>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {cards.map(({ key, icon }) => (
        <div class="group relative p-8 rounded-2xl border border-border bg-card hover:border-primary/30 transition-colors">
          <div class="mb-5 w-10 h-10 rounded-lg bg-destructive/10 flex items-center justify-center">
            {icon === "clock" && (
              <svg class="w-5 h-5 text-destructive" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v6l4 2m6-2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            )}
            {icon === "shield" && (
              <svg class="w-5 h-5 text-destructive" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4.5c-.77-.833-2.694-.833-3.464 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z" />
              </svg>
            )}
            {icon === "lock" && (
              <svg class="w-5 h-5 text-destructive" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            )}
          </div>
          <h3 class="text-lg font-semibold mb-2">{t(`pitch.problem.${key}.title`)}</h3>
          <p class="text-muted-foreground text-sm leading-relaxed">{t(`pitch.problem.${key}.description`)}</p>
        </div>
      ))}
    </div>
  </div>
</section>
