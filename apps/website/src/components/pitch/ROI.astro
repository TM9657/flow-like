---
interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;

const stats = ["stat1", "stat2", "stat3", "stat4"] as const;
---

<section class="relative py-28">
  <div class="absolute top-0 left-0 right-0 h-px bg-border" />

  <div class="mx-auto max-w-5xl px-6 lg:px-8">
    <div class="mb-16 text-center">
      <p class="text-[11px] font-medium tracking-[0.3em] uppercase text-muted-foreground mb-4">
        {t("pitch.roi.tagline")}
      </p>
      <h2 class="text-3xl sm:text-4xl font-semibold tracking-tight">
        {t("pitch.roi.headline")}
      </h2>
    </div>

    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
      {stats.map((key) => (
        <div class="text-center">
          <span class="block text-4xl sm:text-5xl font-bold text-primary mb-2">
            {t(`pitch.roi.${key}.value`)}
          </span>
          <span class="text-sm text-muted-foreground leading-snug">
            {t(`pitch.roi.${key}.label`)}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>
