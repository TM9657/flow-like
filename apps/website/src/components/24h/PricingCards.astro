---
interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;
---

<div class="max-w-3xl mx-auto">
  <div class="grid md:grid-cols-2 gap-6">
    <!-- Standard Tier -->
    <div class="relative group">
      <div class="absolute -inset-px bg-linear-to-br from-primary/20 via-primary/5 to-transparent rounded-2xl group-hover:from-primary/30 transition-all duration-300" />
      <div class="relative h-full p-8 border border-border rounded-2xl bg-background/80 backdrop-blur-sm flex flex-col">
        <div class="mb-6">
          <p class="text-[11px] font-medium tracking-[0.3em] uppercase text-muted-foreground mb-3">
            {t("24h.pricing.standard")}
          </p>
          <div class="flex items-baseline gap-2">
            <span class="text-4xl lg:text-5xl font-bold tracking-tight text-primary">{t("24h.pricing.standard.price")}</span>
          </div>
          <p class="text-sm text-muted-foreground mt-2">{t("24h.pricing.standard.payment")}</p>
          <p class="text-xs text-muted-foreground mt-1">{t("24h.pricing.standard.ownership")}</p>
        </div>

        <div class="space-y-3 mb-8 flex-1">
          {[
            t("24h.pricing.feature.sprint"),
            t("24h.pricing.feature.unlimited"),
            t("24h.pricing.feature.infra"),
            t("24h.pricing.feature.source"),
            t("24h.pricing.feature.support"),
            t("24h.pricing.feature.docs"),
          ].map((feature, i) => (
            <div class="flex items-center gap-3 text-sm">
              <svg class="w-4 h-4 text-primary shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class:list={[{ "font-medium": i === 1 || i === 2 }]}>{feature}</span>
            </div>
          ))}
        </div>

        <a href="#form" class="flex items-center justify-center gap-2 w-full py-3.5 px-6 rounded-xl bg-primary text-primary-foreground font-medium hover:bg-primary/90 transition-colors">
          {t("24h.pricing.cta")}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
      </div>
    </div>

    <!-- App Store Tier -->
    <div class="relative group">
      <div class="absolute -top-3 left-1/2 -translate-x-1/2 px-3 py-1 text-xs font-medium bg-emerald-500 text-white rounded-full z-10">
        {t("24h.pricing.appstore.save")}
      </div>
      <div class="absolute -inset-px bg-linear-to-br from-emerald-500/20 via-emerald-500/5 to-transparent rounded-2xl group-hover:from-emerald-500/30 transition-all duration-300" />
      <div class="relative h-full p-8 border-2 border-emerald-500/50 rounded-2xl bg-background/80 backdrop-blur-sm flex flex-col">
        <div class="mb-6">
          <p class="text-[11px] font-medium tracking-[0.3em] uppercase text-emerald-500 mb-3">
            {t("24h.pricing.appstore")}
          </p>
          <div class="flex items-baseline gap-2">
            <span class="text-4xl lg:text-5xl font-bold tracking-tight text-emerald-500">{t("24h.pricing.appstore.price")}</span>
            <span class="text-lg text-muted-foreground line-through">{t("24h.pricing.standard.price")}</span>
          </div>
          <p class="text-sm text-muted-foreground mt-2">{t("24h.pricing.appstore.payment")}</p>
          <p class="text-xs text-muted-foreground mt-1">{t("24h.pricing.appstore.published")}</p>
        </div>

        <div class="space-y-3 mb-8 flex-1">
          {[
            t("24h.pricing.feature.sprint"),
            t("24h.pricing.feature.unlimited"),
            t("24h.pricing.feature.infra"),
            t("24h.pricing.feature.support"),
            t("24h.pricing.appstore.feature.published"),
            t("24h.pricing.appstore.feature.visibility"),
          ].map((feature, i) => (
            <div class="flex items-center gap-3 text-sm">
              <svg class="w-4 h-4 text-emerald-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class:list={[{ "font-medium": i === 1 || i === 2 || i === 4 || i === 5 }]}>{feature}</span>
            </div>
          ))}
        </div>

        <a href="#form" class="flex items-center justify-center gap-2 w-full py-3.5 px-6 rounded-xl bg-emerald-500 text-white font-medium hover:bg-emerald-600 transition-colors">
          {t("24h.pricing.cta")}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
      </div>
    </div>
  </div>

  <p class="text-xs text-center text-muted-foreground mt-6">
    {t("24h.pricing.note")}
  </p>
</div>
