---
interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;

const faqs = [
  { q: t("24h.faq.q1"), a: t("24h.faq.a1") },
  { q: t("24h.faq.q2"), a: t("24h.faq.a2") },
  { q: t("24h.faq.q3"), a: t("24h.faq.a3") },
  { q: t("24h.faq.q4"), a: t("24h.faq.a4") },
  { q: t("24h.faq.q5"), a: t("24h.faq.a5") },
  { q: t("24h.faq.q6"), a: t("24h.faq.a6") },
];
---

<section class="relative py-28 border-t border-border">
  <div class="mx-auto max-w-4xl px-6 lg:px-8">
    <p class="text-[11px] font-medium tracking-[0.3em] uppercase text-muted-foreground text-center mb-4">
      {t("24h.faq.tagline")}
    </p>
    <h2 class="text-2xl sm:text-3xl font-semibold tracking-tight text-center mb-14">
      {t("24h.faq.headline")}
    </h2>

    <div class="space-y-4">
      {faqs.map((faq, index) => (
        <details class="group border border-border rounded-xl overflow-hidden">
          <summary class="flex items-center justify-between px-6 py-5 cursor-pointer hover:bg-muted/30 transition-colors">
            <span class="text-sm font-medium pr-4">{faq.q}</span>
            <svg class="w-5 h-5 text-muted-foreground shrink-0 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="px-6 pb-5 text-sm text-muted-foreground leading-relaxed">
            {faq.a}
          </div>
        </details>
      ))}
    </div>
  </div>
</section>
