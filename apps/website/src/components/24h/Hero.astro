---
interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;
---

<section class="relative min-h-[90vh] flex items-center">
  <div class="mx-auto max-w-6xl px-6 lg:px-8 py-24 w-full">
    <div class="text-center mb-16 lg:mb-20">
      <p class="text-[11px] font-medium tracking-[0.3em] uppercase text-muted-foreground mb-6">
        {t("24h.hero.tagline")}
      </p>
      <div class="relative inline-block">
        <span class="text-[12rem] sm:text-[16rem] lg:text-[20rem] font-bold tracking-tighter leading-none text-primary/10">
          24
        </span>
        <div class="absolute inset-0 flex items-center justify-center">
          <span class="text-6xl sm:text-7xl lg:text-8xl font-semibold tracking-tight text-primary">
            24
          </span>
        </div>
      </div>
      <p class="text-xl sm:text-2xl text-muted-foreground -mt-4 mb-2">{t("24h.hero.hours")}</p>
      <h1 class="text-2xl sm:text-3xl lg:text-4xl font-semibold tracking-tight mt-6 mb-6">
        {t("24h.hero.headline")} <span class="text-primary">{t("24h.hero.headline.highlight")}</span>
      </h1>
      <p class="text-lg text-muted-foreground leading-relaxed max-w-xl mx-auto mb-4">
        {t("24h.hero.description")}
      </p>
      <p class="text-sm font-medium text-primary mb-10">
        {t("24h.hero.batteries")}
      </p>

      <div class="flex flex-wrap items-center justify-center gap-6">
        <a href="#form" class="inline-flex items-center gap-3 text-sm font-medium group">
          <span class="flex items-center justify-center w-12 h-12 rounded-full border border-primary text-primary group-hover:bg-primary group-hover:text-primary-foreground transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </span>
          <span class="border-b border-transparent group-hover:border-foreground transition-colors">{t("24h.hero.cta.start")}</span>
        </a>
        <a href="#process" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
          {t("24h.hero.cta.how")}
        </a>
      </div>
    </div>

    <slot />
  </div>
</section>
