---
import { SolutionForm } from "../solution-form";

interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;
---

<section id="form" class="relative py-28 border-t border-border">
  <div class="mx-auto max-w-5xl px-6 lg:px-8">
    <p class="text-[11px] font-medium tracking-[0.3em] uppercase text-muted-foreground text-center mb-4">
      {t("24h.form.tagline")}
    </p>
    <h2 class="text-2xl sm:text-3xl font-semibold tracking-tight text-center mb-4">
      {t("24h.form.headline")}
    </h2>
    <p class="text-muted-foreground text-center mb-12 max-w-xl mx-auto">
      {t("24h.form.description")}
    </p>
    <SolutionForm client:load />
  </div>
</section>
