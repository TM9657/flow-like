---
interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;

const points = [
  { num: "01", title: t("24h.why.point1.title"), desc: t("24h.why.point1.description") },
  { num: "02", title: t("24h.why.point2.title"), desc: t("24h.why.point2.description") },
  { num: "03", title: t("24h.why.point3.title"), desc: t("24h.why.point3.description") },
  { num: "04", title: t("24h.why.point4.title"), desc: t("24h.why.point4.description") },
];
---

<section class="relative py-32 bg-muted/30">
  <div class="absolute top-0 left-0 right-0 h-px bg-border" />

  <div class="mx-auto max-w-6xl px-6 lg:px-8">
    <div class="mb-20">
      <p class="text-[11px] font-medium tracking-[0.3em] uppercase text-muted-foreground mb-4">
        {t("24h.why.tagline")}
      </p>
      <h2 class="text-3xl sm:text-4xl font-semibold tracking-tight max-w-md">
        {t("24h.why.headline")}
      </h2>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-6">
      {points.map((point) => (
        <div class="space-y-4">
          <span class="text-5xl font-light text-primary/30">{point.num}</span>
          <h3 class="text-lg font-semibold">{point.title}</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">{point.desc}</p>
        </div>
      ))}
    </div>
  </div>
</section>
