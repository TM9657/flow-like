---
interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;

const steps = [
  { time: t("24h.process.step1.time"), unit: t("24h.process.step1.unit"), title: t("24h.process.step1.title"), desc: t("24h.process.step1.description"), color: "primary" },
  { time: t("24h.process.step2.time"), unit: t("24h.process.step2.unit"), title: t("24h.process.step2.title"), desc: t("24h.process.step2.description"), color: "muted" },
  { time: t("24h.process.step3.time"), unit: t("24h.process.step3.unit"), title: t("24h.process.step3.title"), desc: t("24h.process.step3.description"), color: "emerald" },
];
---

<section id="process" class="relative py-32">
  <div class="absolute top-0 left-0 right-0 h-px bg-border" />

  <div class="mx-auto max-w-5xl px-6 lg:px-8">
    <div class="mb-20 lg:mb-28">
      <p class="text-[11px] font-medium tracking-[0.3em] uppercase text-muted-foreground mb-4">
        {t("24h.process.tagline")}
      </p>
      <h2 class="text-3xl sm:text-4xl font-semibold tracking-tight">
        {t("24h.process.headline")}
      </h2>
    </div>

    <div class="relative">
      <div class="absolute left-0 lg:left-20 top-0 bottom-0 w-px bg-border" />

      <div class="space-y-20">
        {steps.map((step, i) => (
          <div class="relative pl-10 lg:pl-40">
            <div class:list={[
              "absolute left-0 lg:left-20 top-2 -translate-x-1/2 w-2.5 h-2.5 rounded-full ring-4 ring-background",
              step.color === "primary" && "bg-primary",
              step.color === "muted" && "bg-muted-foreground/50",
              step.color === "emerald" && "bg-emerald-500",
            ]} />
            <div class="absolute left-0 lg:left-6 top-0 w-12 text-right hidden lg:block">
              <span class:list={[
                "text-2xl font-semibold",
                step.color === "primary" && "text-primary",
                step.color === "emerald" && "text-emerald-500",
              ]}>{step.time}</span>
              <span class="text-xs text-muted-foreground block">{step.unit}</span>
            </div>
            <span class:list={[
              "lg:hidden text-sm font-medium mb-2 block",
              step.color === "primary" && "text-primary",
              step.color === "emerald" && "text-emerald-500",
            ]}>{step.time} {step.unit}</span>
            <h3 class="text-xl font-semibold mb-3">{step.title}</h3>
            <p class="text-muted-foreground max-w-lg leading-relaxed">{step.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
