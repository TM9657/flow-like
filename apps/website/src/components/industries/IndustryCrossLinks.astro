---
interface Props {
  currentSlug: string;
}

const { currentSlug } = Astro.props;

const industries = [
  { slug: "shopfloor", name: "Shopfloor Automation", accent: "orange", brief: "Connect machines, sensors, and PLCs into traceable digital workflows.", border: "border-orange-500/30 hover:border-orange-500/60", dot: "bg-orange-400", arrow: "text-orange-400" },
  { slug: "finance",   name: "Finance Operations",   accent: "emerald", brief: "Automate reconciliation, reporting, and compliance workflows.",        border: "border-emerald-500/30 hover:border-emerald-500/60", dot: "bg-emerald-400", arrow: "text-emerald-400" },
  { slug: "office",    name: "Office Automation",     accent: "blue",    brief: "Streamline documents, approvals, and cross-team handoffs.",           border: "border-blue-500/30 hover:border-blue-500/60",    dot: "bg-blue-400",    arrow: "text-blue-400" },
  { slug: "ai-agents", name: "AI Agents & RAG",       accent: "violet",  brief: "Orchestrate LLMs, RAG pipelines, and multi-agent systems.",          border: "border-violet-500/30 hover:border-violet-500/60",  dot: "bg-violet-400",  arrow: "text-violet-400" },
  { slug: "gov-defense", name: "Gov & Defense",        accent: "red",     brief: "Air-gapped, sovereign, and auditable automation.",                   border: "border-red-500/30 hover:border-red-500/60",     dot: "bg-red-400",     arrow: "text-red-400" },
];

const others = industries.filter((i) => i.slug !== currentSlug);
---

<section class="relative py-24 sm:py-32">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-2xl sm:text-3xl font-bold tracking-tight text-foreground">
        Explore More Solutions
      </h2>
      <p class="mt-2 text-muted-foreground">
        Flow-Like powers automation across industries
      </p>
    </div>

    <div class="grid gap-5 sm:grid-cols-2 lg:grid-cols-4">
      {others.map((ind) => (
        <a href={`/industries/${ind.slug}`} class={`group relative flex flex-col rounded-xl border bg-card/50 backdrop-blur-sm p-6 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg ${ind.border}`}>
          <div class="flex items-center gap-2 mb-3">
            <span class={`w-2.5 h-2.5 rounded-full flex-shrink-0 ${ind.dot}`}></span>
            <h3 class="font-semibold text-foreground">{ind.name}</h3>
          </div>
          <p class="text-sm text-muted-foreground leading-relaxed flex-1">{ind.brief}</p>
          <div class={`mt-4 flex items-center gap-1 text-sm font-medium ${ind.arrow} opacity-0 group-hover:opacity-100 transition-opacity`}>
            Learn more
            <svg viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2" class="w-4 h-4 transition-transform group-hover:translate-x-0.5">
              <path d="M3 8h10M9 4l4 4-4 4"/>
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
