---
import { tCommon } from "../../i18n/locales/pages/common";

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = (key: string) => tCommon(lang, key);
---

<section class="py-12 md:py-20 relative overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-emerald-500/5 to-transparent"></div>
  </div>

  <div class="max-w-6xl mx-auto px-4">
    <!-- Outer glow container -->
    <div class="relative">
      <!-- Animated glow -->
      <div class="absolute -inset-1 bg-gradient-to-r from-emerald-500 via-cyan-500 to-emerald-500 rounded-[2rem] blur-xl opacity-20 animate-pulse"></div>

      <!-- Main card -->
      <div class="relative rounded-[2rem] bg-gradient-to-b from-emerald-500/10 to-cyan-500/5 border border-emerald-500/20 backdrop-blur-xl overflow-hidden">
        <!-- Decorative elements -->
        <div class="absolute top-0 right-0 w-96 h-96 bg-emerald-500/10 rounded-full blur-[100px] -translate-y-1/2 translate-x-1/2"></div>
        <div class="absolute bottom-0 left-0 w-64 h-64 bg-cyan-500/10 rounded-full blur-[80px] translate-y-1/2 -translate-x-1/2"></div>

        <!-- Content -->
        <div class="relative z-10 p-8 md:p-12 lg:p-16">
          <div class="flex flex-col lg:flex-row items-center gap-12">
            {/* Content side */}
            <div class="flex-1 text-center lg:text-left">
              {/* Badge */}
              <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-emerald-500/20 border border-emerald-500/30 mb-6">
                <span class="relative flex h-2.5 w-2.5">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-emerald-500"></span>
                </span>
                <span class="text-emerald-400 text-sm font-semibold tracking-wide">{t("pricing.studio.badge")}</span>
              </div>

              {/* Title */}
              <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 leading-tight">
                {t("pricing.studio.title")}
                <br />
                <span class="bg-clip-text text-transparent bg-gradient-to-r from-emerald-400 to-cyan-400">
                  {t("pricing.studio.titleHighlight")}
                </span>
              </h2>

              {/* Description */}
              <p class="text-lg text-muted-foreground mb-10 max-w-xl">
                {t("pricing.studio.description")}
              </p>

              {/* Benefits grid - 2x2 */}
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-10">
                <div class="group flex items-start gap-4 p-4 rounded-2xl bg-card/30 backdrop-blur-sm border border-border/30 hover:border-emerald-500/30 transition-all duration-300">
                  <div class="p-3 rounded-xl bg-gradient-to-br from-emerald-500/20 to-cyan-500/20 group-hover:from-emerald-500/30 group-hover:to-cyan-500/30 transition-all">
                    <svg class="w-6 h-6 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold mb-1">{t("pricing.studio.desktop")}</h4>
                    <p class="text-sm text-muted-foreground">{t("pricing.studio.desktopPlatforms")}</p>
                  </div>
                </div>

                <div class="group flex items-start gap-4 p-4 rounded-2xl bg-card/30 backdrop-blur-sm border border-border/30 hover:border-emerald-500/30 transition-all duration-300">
                  <div class="p-3 rounded-xl bg-gradient-to-br from-emerald-500/20 to-cyan-500/20 group-hover:from-emerald-500/30 group-hover:to-cyan-500/30 transition-all">
                    <svg class="w-6 h-6 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold mb-1">{t("pricing.studio.mobile")}</h4>
                    <p class="text-sm text-muted-foreground">{t("pricing.studio.mobilePlatforms")}</p>
                  </div>
                </div>

                <div class="group flex items-start gap-4 p-4 rounded-2xl bg-card/30 backdrop-blur-sm border border-border/30 hover:border-emerald-500/30 transition-all duration-300">
                  <div class="p-3 rounded-xl bg-gradient-to-br from-emerald-500/20 to-cyan-500/20 group-hover:from-emerald-500/30 group-hover:to-cyan-500/30 transition-all">
                    <svg class="w-6 h-6 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold mb-1">{t("pricing.studio.unlimitedRuns")}</h4>
                    <p class="text-sm text-muted-foreground">{t("pricing.studio.unlimitedRunsDesc")}</p>
                  </div>
                </div>

                <div class="group flex items-start gap-4 p-4 rounded-2xl bg-card/30 backdrop-blur-sm border border-border/30 hover:border-emerald-500/30 transition-all duration-300">
                  <div class="p-3 rounded-xl bg-gradient-to-br from-emerald-500/20 to-cyan-500/20 group-hover:from-emerald-500/30 group-hover:to-cyan-500/30 transition-all">
                    <svg class="w-6 h-6 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636a9 9 0 010 12.728m0 0l-2.829-2.829m2.829 2.829L21 21M15.536 8.464a5 5 0 010 7.072m0 0l-2.829-2.829m-4.243 2.829a4.978 4.978 0 01-1.414-2.83m-1.414 5.658a9 9 0 01-2.167-9.238m7.824 2.167a1 1 0 111.414 1.414m-1.414-1.414L3 3m8.293 8.293l1.414 1.414" />
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold mb-1">{t("pricing.studio.offline")}</h4>
                    <p class="text-sm text-muted-foreground">{t("pricing.studio.offlineDesc")}</p>
                  </div>
                </div>
              </div>

              {/* Download CTA */}
              <a
                href="/download"
                class="group inline-flex items-center gap-3 px-8 py-4 rounded-2xl bg-gradient-to-r from-emerald-500 to-cyan-500 text-white font-bold text-lg shadow-lg shadow-emerald-500/25 hover:shadow-xl hover:shadow-emerald-500/30 hover:-translate-y-1 transition-all duration-300"
              >
                <svg class="w-6 h-6 group-hover:animate-bounce" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
                {t("pricing.studio.downloadCta")}
              </a>
            </div>

            {/* Visual side - Floating mockups */}
            <div class="flex-shrink-0 w-full lg:w-[380px] relative">
              <div class="relative">
                {/* Desktop mockup */}
                <div class="relative bg-gradient-to-b from-card to-card/80 border border-border/50 rounded-2xl shadow-2xl overflow-hidden transform hover:scale-105 transition-transform duration-500">
                  {/* Window header */}
                  <div class="flex items-center gap-2 px-4 py-3 bg-gradient-to-b from-muted/80 to-muted/50 border-b border-border/50">
                    <div class="flex gap-1.5">
                      <div class="w-3 h-3 rounded-full bg-red-500/80"></div>
                      <div class="w-3 h-3 rounded-full bg-yellow-500/80"></div>
                      <div class="w-3 h-3 rounded-full bg-green-500/80"></div>
                    </div>
                    <span class="ml-2 text-xs text-muted-foreground font-medium">Flow-Like Studio</span>
                  </div>
                  {/* Window content */}
                  <div class="p-6 min-h-[240px] bg-gradient-to-br from-background via-background to-emerald-500/5">
                    <div class="flex flex-col items-center justify-center h-full text-center">
                      <div class="w-20 h-20 mb-4 rounded-2xl bg-gradient-to-br from-emerald-500 to-cyan-500 flex items-center justify-center shadow-lg shadow-emerald-500/20">
                        <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                      </div>
                      <p class="font-semibold text-lg mb-1">{t("pricing.studio.visualBuilder")}</p>
                      <p class="text-sm text-muted-foreground">{t("pricing.studio.visualBuilderDesc")}</p>
                    </div>
                  </div>
                </div>

                {/* Mobile mockup - floating */}
                <div class="absolute -bottom-8 -right-4 w-28 bg-gradient-to-b from-card to-card/80 border border-border/50 rounded-2xl shadow-xl overflow-hidden transform rotate-6 hover:rotate-0 hover:scale-110 transition-all duration-500">
                  <div class="h-2 bg-gradient-to-b from-muted/80 to-muted/50"></div>
                  <div class="p-3 aspect-[9/16] bg-gradient-to-br from-background to-emerald-500/5 flex items-center justify-center">
                    <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-emerald-500 to-cyan-500 flex items-center justify-center shadow-lg">
                      <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                      </svg>
                    </div>
                  </div>
                </div>

                {/* Decorative orbit ring */}
                <div class="absolute -inset-4 border border-dashed border-emerald-500/20 rounded-full animate-spin-slow pointer-events-none" style="animation-duration: 30s;"></div>
              </div>
            </div>
          </div>

          {/* In-app purchase note */}
          <div class="mt-12 pt-8 border-t border-emerald-500/10">
            <div class="flex flex-col sm:flex-row items-center justify-center gap-4 text-sm text-muted-foreground">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>{t("pricing.studio.inAppNote")}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes spin-slow {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  .animate-spin-slow {
    animation: spin-slow 30s linear infinite;
  }
</style>
  </div>
</section>
