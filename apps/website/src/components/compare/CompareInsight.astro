---
interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;
---

<section class="relative py-20 lg:py-28 overflow-hidden">
  <!-- Decorative background -->
  <div aria-hidden="true" class="pointer-events-none absolute inset-0 -z-10">
    <div class="absolute inset-0 bg-[radial-gradient(50%_50%_at_50%_50%,hsl(var(--primary)/.06),transparent)]"></div>
  </div>

  <div class="mx-auto max-w-4xl px-6 lg:px-8 text-center">
    <p class="text-[11px] font-medium tracking-[0.3em] uppercase text-primary mb-6">
      {t("compare.insight.tagline")}
    </p>

    <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold tracking-tight mb-8 leading-tight">
      {t("compare.insight.headline")}
    </h2>

    <!-- Visual representation -->
    <div class="grid md:grid-cols-3 gap-6 mb-10">
      <!-- Execution Engines -->
      <div class="rounded-2xl border border-border/40 bg-card/40 backdrop-blur-sm p-6">
        <div class="text-sm font-medium text-amber-500 mb-4">Execution Engines</div>
        <div class="flex flex-wrap justify-center gap-2">
          {["n8n", "Node-RED", "Zapier"].map((name) => (
            <span class="px-3 py-1.5 rounded-full bg-amber-500/10 text-amber-600 dark:text-amber-400 text-xs font-medium border border-amber-500/20">
              {name}
            </span>
          ))}
        </div>
        <div class="flex flex-wrap justify-center gap-2 mt-2">
          {["Airflow", "Temporal"].map((name) => (
            <span class="px-3 py-1.5 rounded-full bg-purple-500/10 text-purple-600 dark:text-purple-400 text-xs font-medium border border-purple-500/20">
              {name} ✓
            </span>
          ))}
        </div>
        <div class="mt-4 pt-4 border-t border-border/30 text-xs text-muted-foreground">
          Can run workflows<br/>
          <span class="text-purple-500">✓ = replayable</span>
        </div>
      </div>

      <!-- UI Shells -->
      <div class="rounded-2xl border border-border/40 bg-card/40 backdrop-blur-sm p-6">
        <div class="text-sm font-medium text-blue-500 mb-4">UI Shells</div>
        <div class="flex flex-wrap justify-center gap-2">
          {["Retool", "Power Apps", "Appsmith", "Superblocks"].map((name) => (
            <span class="px-3 py-1.5 rounded-full bg-blue-500/10 text-blue-600 dark:text-blue-400 text-xs font-medium border border-blue-500/20">
              {name}
            </span>
          ))}
        </div>
        <div class="mt-4 pt-4 border-t border-border/30 text-xs text-muted-foreground">
          Can build interfaces
        </div>
      </div>

      <!-- Flow-Like -->
      <div class="rounded-2xl border-2 border-emerald-500/50 bg-emerald-500/5 backdrop-blur-sm p-6 relative">
        <div class="absolute -top-3 left-1/2 -translate-x-1/2">
          <span class="px-3 py-1 rounded-full bg-emerald-500 text-white text-xs font-semibold">
            Both + More
          </span>
        </div>
        <div class="text-sm font-medium text-emerald-600 dark:text-emerald-400 mb-4 mt-2">Flow-Like</div>
        <div class="flex flex-wrap justify-center gap-2">
          {["Workflows", "UI Builder", "Desktop", "Mobile", "Offline"].map((cap) => (
            <span class="px-3 py-1.5 rounded-full bg-emerald-500/10 text-emerald-600 dark:text-emerald-400 text-xs font-medium border border-emerald-500/20">
              {cap}
            </span>
          ))}
        </div>
        <div class="mt-4 pt-4 border-t border-emerald-500/20 text-xs text-emerald-600 dark:text-emerald-400 font-medium">
          Ships real applications
        </div>
      </div>
    </div>

    <p class="text-lg text-muted-foreground leading-relaxed max-w-2xl mx-auto">
      {t("compare.insight.description")}
    </p>
  </div>
</section>
