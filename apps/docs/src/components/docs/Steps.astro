---
interface Cta {
    href: string;
    label: string;
}
interface Step {
    label: string;
    detail: string;
    cta?: Cta;
}
interface Props {
    steps: Step[];
}
const { steps } = Astro.props as Props;
---

<section id="steps" class="steps-section">
    <div class="container">
        <div class="intro">
            <div class="badge">
                <span class="dot"></span>
                Get started
            </div>
            <h2 class="heading">Three steps to <span class="grad">production</span></h2>
            <p class="sub">From idea to deployment, Flow-Like guides you through each phase.</p>
        </div>

        <ol class="timeline" role="list">
            {
                steps.map((s, i) => (
                    <li class="row">
                        <div class="step-number">
                            <span class="number">{i + 1}</span>
                        </div>
                        <div class="panel">
                            <h3 class="label">{s.label}</h3>
                            <p class="detail">{s.detail}</p>
                            {s.cta && (
                                <a class="cta" href={s.cta.href} aria-label={`Open "${s.cta.label}" for ${s.label}`}>
                                    <span>{s.cta.label}</span>
                                    <svg width="14" height="14" viewBox="0 0 24 24" aria-hidden="true">
                                        <path fill="currentColor" d="M14 3h7v7h-2V6.41l-9.3 9.3-1.4-1.41 9.3-9.3H14V3Z"/>
                                    </svg>
                                </a>
                            )}
                        </div>
                    </li>
                ))
            }
        </ol>
    </div>
</section>

<style>
    .steps-section {
        position: relative;
        padding: clamp(2rem, 5vw, 3rem) 1rem;
    }

    .container {
        margin: 0 auto;
        max-width: 800px;
    }

    /* Header */
    .intro {
        text-align: center;
        margin-bottom: clamp(1.5rem, 4vw, 2.5rem);
    }

    .badge {
        display: inline-flex;
        align-items: center;
        gap: 0.625rem;
        padding: 0.5rem 1rem;
        border-radius: 9999px;
        border: 1px solid hsl(142 76% 36% / 0.3);
        background: hsl(142 76% 36% / 0.1);
        color: hsl(142 76% 36%);
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 1rem;
        backdrop-filter: blur(8px);
    }

    .dot {
        width: 0.5rem;
        height: 0.5rem;
        border-radius: 50%;
        background: hsl(142 76% 36%);
        box-shadow: 0 0 8px hsl(142 76% 36% / 0.6);
    }

    .heading {
        font-size: clamp(1.75rem, 4vw, 2.5rem);
        font-weight: 700;
        letter-spacing: -0.02em;
        line-height: 1.2;
        margin: 0;
        color: var(--sl-color-text);
    }

    .grad {
        background: linear-gradient(135deg, hsl(var(--sl-color-accent)), hsl(142 76% 36%));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .sub {
        margin: 0.75rem auto 0;
        max-width: 50ch;
        font-size: 1rem;
        color: var(--sl-color-gray-2);
        line-height: 1.6;
    }

    /* Timeline */
    .timeline {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .row {
        position: relative;
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 1rem;
        align-items: start;
    }

    /* Connector line */
    .row::before {
        content: "";
        position: absolute;
        left: 1.375rem;
        top: 3rem;
        bottom: -1rem;
        width: 2px;
        background: linear-gradient(180deg, hsl(var(--sl-color-accent) / 0.4), hsl(142 76% 36% / 0.4));
    }

    .row:last-child::before {
        display: none;
    }

    /* Step number */
    .step-number {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 2.75rem;
        height: 2.75rem;
        border-radius: 50%;
        background: linear-gradient(135deg, hsl(var(--sl-color-accent) / 0.2), hsl(142 76% 36% / 0.15));
        border: 1px solid var(--sl-color-gray-5);
        flex-shrink: 0;
    }

    .number {
        font-size: 1rem;
        font-weight: 700;
        background: linear-gradient(135deg, hsl(var(--sl-color-accent)), hsl(142 76% 36%));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Panel */
    .panel {
        position: relative;
        padding: 1.25rem;
        border-radius: 1rem;
        background: var(--sl-color-gray-6);
        border: 1px solid var(--sl-color-gray-5);
        transition: all 0.2s ease;
    }

    .panel::before {
        content: "";
        position: absolute;
        inset: 0;
        border-radius: 1rem;
        padding: 1px;
        background: linear-gradient(135deg, hsl(var(--sl-color-accent) / 0.3), transparent, hsl(142 76% 36% / 0.3));
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        pointer-events: none;
        opacity: 0;
        transition: opacity 0.2s ease;
    }

    .row:hover .panel {
        transform: translateY(-2px);
        border-color: var(--sl-color-gray-4);
        box-shadow: 0 10px 40px -10px rgba(0, 0, 0, 0.3);
    }

    .row:hover .panel::before {
        opacity: 1;
    }

    .label {
        margin: 0 0 0.375rem;
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--sl-color-text);
    }

    .detail {
        margin: 0;
        font-size: 0.9rem;
        color: var(--sl-color-gray-2);
        line-height: 1.6;
    }

    /* CTA */
    .cta {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        margin-top: 0.75rem;
        padding: 0.5rem 0.875rem;
        border-radius: 9999px;
        font-size: 0.8rem;
        font-weight: 500;
        text-decoration: none;
        background: hsl(var(--sl-color-accent) / 0.1);
        border: 1px solid hsl(var(--sl-color-accent) / 0.3);
        color: hsl(var(--sl-color-accent));
        transition: all 0.2s ease;
    }

    .cta:hover {
        background: hsl(var(--sl-color-accent) / 0.15);
        transform: translateY(-1px);
    }

    .cta svg {
        transition: transform 0.2s ease;
    }

    .cta:hover svg {
        transform: translate(2px, -2px);
    }

    @media (prefers-reduced-motion: reduce) {
        .panel, .panel::before, .cta {
            transition: none;
        }
    }
</style>
