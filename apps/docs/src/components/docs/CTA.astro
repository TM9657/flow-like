---
interface Action {
    href: string;
    label: string;
}
interface Props {
    kicker?: string;
    title: string;
    subtitle?: string;
    primary: Action;
    secondary?: Action;
}
const { kicker, title, subtitle, primary, secondary } = Astro.props as Props;
---

<section id="cta" class="cta-section">
    <div aria-hidden="true" class="bg">
        <div class="bg-glow bg-glow-1"></div>
        <div class="bg-glow bg-glow-2"></div>
    </div>

    <div class="container">
        <div class="card">
            <div class="card-gradient"></div>
            <div class="card-content">
                {
                    kicker && (
                        <div class="badge" role="note">
                            <span class="dot" aria-hidden="true" />
                            {kicker}
                        </div>
                    )
                }

                <h2 class="title">{title}</h2>
                {subtitle && <p class="subtitle">{subtitle}</p>}

                <div class="actions">
                    <a class="btn primary" href={primary.href} aria-label={primary.label}>
                        <span>{primary.label}</span>
                        <svg width="16" height="16" viewBox="0 0 24 24" aria-hidden="true">
                            <path fill="currentColor" d="M14 3h7v7h-2V6.41l-9.3 9.3-1.4-1.41 9.3-9.3H14V3Z"/>
                        </svg>
                    </a>
                    {
                        secondary && (
                            <a class="btn secondary" href={secondary.href} aria-label={secondary.label}>
                                <span>{secondary.label}</span>
                            </a>
                        )
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .cta-section {
        position: relative;
        isolation: isolate;
        overflow: clip;
        margin: 3rem 0 2rem;
        padding: clamp(2rem, 5vw, 3rem) 1rem;
    }

    .container {
        margin: 0 auto;
        max-width: 900px;
    }

    /* Background */
    .bg {
        position: absolute;
        inset: 0;
        pointer-events: none;
        z-index: -1;
    }

    .bg-glow {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
        opacity: 0.4;
    }

    .bg-glow-1 {
        width: 400px;
        height: 300px;
        background: hsl(var(--sl-color-accent));
        top: -100px;
        left: 50%;
        transform: translateX(-80%);
    }

    .bg-glow-2 {
        width: 350px;
        height: 250px;
        background: hsl(142 76% 36%);
        bottom: -80px;
        left: 50%;
        transform: translateX(-20%);
    }

    /* Card */
    .card {
        position: relative;
        border-radius: 1.25rem;
        border: 1px solid var(--sl-color-gray-5);
        background: var(--sl-color-bg-nav);
        backdrop-filter: blur(12px);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        overflow: hidden;
    }

    .card::before {
        content: "";
        position: absolute;
        inset: 0;
        border-radius: 1.25rem;
        padding: 1px;
        background: linear-gradient(135deg, hsl(var(--sl-color-accent) / 0.4), transparent, hsl(142 76% 36% / 0.4));
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        pointer-events: none;
        opacity: 0.5;
        transition: opacity 0.2s ease;
    }

    .card:hover::before {
        opacity: 0.8;
    }

    .card-gradient {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, hsl(var(--sl-color-accent) / 0.05), transparent, hsl(142 76% 36% / 0.05));
        pointer-events: none;
    }

    .card-content {
        position: relative;
        padding: clamp(2rem, 5vw, 3rem);
        text-align: center;
    }

    /* Badge */
    .badge {
        display: inline-flex;
        align-items: center;
        gap: 0.625rem;
        padding: 0.5rem 1rem;
        border-radius: 9999px;
        border: 1px solid hsl(var(--sl-color-accent) / 0.3);
        background: hsl(var(--sl-color-accent) / 0.1);
        color: hsl(var(--sl-color-accent));
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 1.25rem;
        backdrop-filter: blur(8px);
    }

    .dot {
        width: 0.5rem;
        height: 0.5rem;
        border-radius: 50%;
        background: hsl(var(--sl-color-accent));
        box-shadow: 0 0 8px hsl(var(--sl-color-accent) / 0.6);
        animation: pulse 2s infinite ease-in-out;
    }

    @keyframes pulse {
        0%, 100% { transform: scale(0.9); opacity: 0.75; }
        50% { transform: scale(1); opacity: 1; }
    }

    /* Title */
    .title {
        margin: 0;
        font-size: clamp(1.75rem, 4vw, 2.5rem);
        font-weight: 700;
        letter-spacing: -0.02em;
        line-height: 1.2;
        background: linear-gradient(135deg, var(--sl-color-text), hsl(var(--sl-color-accent)), hsl(142 76% 36%));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .subtitle {
        margin: 0.75rem auto 0;
        max-width: 50ch;
        font-size: 1rem;
        color: var(--sl-color-gray-2);
        line-height: 1.6;
    }

    /* Actions */
    .actions {
        display: flex;
        gap: 0.75rem;
        justify-content: center;
        flex-wrap: wrap;
        margin-top: 1.5rem;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .btn.primary {
        background: var(--sl-color-text);
        color: var(--sl-color-bg);
        box-shadow: 0 4px 14px rgba(0, 0, 0, 0.25);
    }

    .btn.primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    }

    .btn.primary svg {
        transition: transform 0.2s ease;
    }

    .btn.primary:hover svg {
        transform: translate(2px, -2px);
    }

    .btn.secondary {
        background: transparent;
        border: 1px solid var(--sl-color-gray-5);
        color: var(--sl-color-text);
    }

    .btn.secondary:hover {
        background: var(--sl-color-gray-6);
        border-color: var(--sl-color-gray-4);
    }

    @media (prefers-reduced-motion: reduce) {
        .card::before, .btn, .dot {
            transition: none;
            animation: none;
        }
    }
</style>
