# =============================================================================
# Flow-Like Helm Secrets Configuration
# =============================================================================
# Copy this file to values-secrets.yaml and fill in your actual secrets.
# DO NOT commit values-secrets.yaml to version control!
#
# Usage:
#   helm install flow-like ./helm -f values.yaml -f values-secrets.yaml
#   helm upgrade flow-like ./helm -f values.yaml -f values-secrets.yaml
# =============================================================================

# JWT Configuration (Required)
# Generate keys with: ./scripts/gen-execution-keys.sh
jwt:
  backendKey: "YOUR_BASE64_ENCODED_PRIVATE_KEY"
  backendPub: "YOUR_BASE64_ENCODED_PUBLIC_KEY"
  backendKid: "backend-es256-v1"

# Storage Credentials (choose based on your provider)
storage:
  # Azure Blob Storage
  azure:
    accountName: "your-storage-account"
    accountKey: "your-storage-key"

  # AWS S3
  # aws:
  #   accessKeyId: "AKIAIOSFODNN7EXAMPLE"
  #   secretAccessKey: "wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY"

  # Cloudflare R2
  # r2:
  #   accountId: "your-account-id"
  #   accessKeyId: "your-access-key-id"
  #   secretAccessKey: "your-secret-access-key"

  # Google Cloud Storage
  # gcp:
  #   serviceAccountKey: "BASE64_ENCODED_SERVICE_ACCOUNT_JSON"

  # S3-Compatible Storage
  # s3:
  #   accessKeyId: "your-access-key"
  #   secretAccessKey: "your-secret-key"

# Grafana admin password (optional - auto-generated if empty)
# monitoring:
#   grafana:
#     adminPassword: "your-secure-password"

# Redis password (optional - auto-generated if empty)
# redis:
#   auth:
#     password: "your-redis-password"

# CockroachDB password (optional - auto-generated if empty)
# database:
#   internal:
#     auth:
#       password: "your-cockroach-password"
