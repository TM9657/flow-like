{
	"name": "flow-like",
	"private": true,
	"version": "0.0.2",
	"type": "module",
	"scripts": {
		"dev:desktop": "bun run --cwd ./apps/desktop dev:auto",
		"dev:desktop:local": "bun run dev:api & bun run dev:runtime & bun run --cwd ./apps/desktop dev:auto",
		"dev:web": "bun run --cwd ./apps/web dev",
		"dev:web:local": "bun run dev:api & bun run dev:runtime & bun run --cwd ./apps/web dev",
		"dev:ios": "bun run --cwd ./apps/desktop dev:ios",
		"dev:ios:host": "bun run --cwd ./apps/desktop dev:ios:host",
		"dev:desktop:mac:arm": "dotenv -e ./apps/desktop/.env -- bun run --cwd ./apps/desktop dev:mac:arm",
		"dev:desktop:mac:intel": "bun run --cwd ./apps/desktop dev:mac:intel",
		"dev:desktop:win:arm": "bun run --cwd ./apps/desktop dev:win:arm",
		"dev:desktop:win:x64": "bun run --cwd ./apps/desktop dev:win:x64",
		"dev:desktop:linux:x64": "bun run --cwd ./apps/desktop dev:linux:x64",
		"dev:xcode": "bun run --cwd ./apps/desktop dev:xcode",
		"build:xcode": "ORT_IOS_XCFWK_LOCATION=\"/Users/felix/Git/flow-like/apps/desktop/src-tauri/gen/apple/thirdparty/onnxruntime.xcframework\" bun run --cwd ./apps/desktop build:xcode",
		"db:view": "bun run --cwd packages/api db:view",
		"db:push:sync": "bun run --cwd packages/api db:push:sync",
		"dev:api": "bun run --cwd ./apps/backend/local/api dev",
		"dev:api:restart": "pkill -f 'flow-like-api' || true && bun run dev:api",
		"dev:runtime": "bun run --cwd ./apps/backend/local/runtime dev",
		"dev:embedded": "bun run --cwd ./apps/embedded dev",
		"dev:website": "bun run --cwd ./apps/website dev",
		"dev:docs": "bun run --cwd ./apps/docs dev",
		"build:website": "bun run --cwd ./apps/website build",
		"build:web": "bun run --cwd ./apps/web build",
		"build:desktop": "bun run --cwd ./apps/desktop tauri build",
		"build:docs": "bun run --cwd ./apps/docs build",
		"build:embedded": "bun run --cwd ./apps/embedded build",
		"deploy:embedded": "bun run --cwd ./apps/embedded deploy",
		"deploy:website": "bun run --cwd ./apps/website deploy",
		"deploy:website:force": "bun run --cwd ./apps/website deploy:force",
		"deploy:web": "bun run --cwd ./apps/web deploy",
		"deploy:web:force": "bun run --cwd ./apps/web deploy:force",
		"deploy:docs": "bun run --cwd ./apps/docs deploy",
		"deploy:docs:force": "bun run --cwd ./apps/docs deploy:force",
		"postinstall": "cargo install cargo-license cargo-watch systemfd --locked",
		"version": "npm version patch -m \"Increment version to %s\"",
		"bloat": "cargo bloat --release -n 10",
		"bench": "cargo bench",
		"bench:flows": "cargo bench -p flow-like-catalog --bench flow_bench",
		"fix": "cargo clippy --fix && cargo fmt && bunx biome check --write",
		"schema": "bun run ./tools/generate-schema.ts",
		"licenses": "bun run ./tools/generate-licenses.ts",
		"license": "cd src-tauri && cargo license -j > ./assets/licenses.json && cd .. && bunx license-report --output=json > src-tauri/assets/licenses-node.json && bun run ./tools/license-bundle.ts"
	},
	"workspaces": ["packages/*", "apps/*"],
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"dotenv-cli": "^8.0.0",
		"express": "^4.21.2",
		"sharp": "^0.33.5",
		"wrangler": "^3.109.3"
	}
}
